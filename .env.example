# ---- App Mode ----
MODE=development
PORT=3000

# ---- Auth (staging/basic auth) ----
BASIC_AUTH_USER=demo
BASIC_AUTH_PASS=demo123

# ---- SLA Watcher ----
# passive = safe default (does NOT mutate DB via SLA automation)
# primary = enables SLA mutations (single writer)
SLA_MODE=passive

# ---- Database ----
# Default DB is data/portal.db if these are not set
# PORTAL_DB_PATH=/absolute/path/to/portal.db
# DB_PATH=/absolute/path/to/portal.db

# ---- Smoke tests (optional) ----
SMOKE_BASE_URL=http://localhost:3000

# ---- Email (SMTP) ----
EMAIL_ENABLED=true
SMTP_HOST=smtp.zoho.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=noreply@tashkheesa.com
SMTP_PASS=
SMTP_FROM_EMAIL=noreply@tashkheesa.com
SMTP_FROM_NAME=Tashkheesa

# ---- WhatsApp (Meta Cloud API) ----
WHATSAPP_ENABLED=true
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_API_VERSION=v22.0

# ---- Notification System ----
NOTIFICATION_WORKER_ENABLED=true
NOTIFICATION_WORKER_INTERVAL_MS=30000
NOTIFICATION_MAX_RETRIES=3
NOTIFICATION_DRY_RUN=false

# ---- App ----
APP_URL=https://tashkheesa.com