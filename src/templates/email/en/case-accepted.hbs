<!-- Case Accepted â€” Patient notification -->
<h2 style="margin:0 0 16px 0;font-size:22px;font-weight:700;color:#1a365d;">
  A Specialist Is Reviewing Your Case
</h2>

<p style="margin:0 0 16px 0;font-size:15px;line-height:1.6;color:#4a5568;">
  Hi {{patientName}},
</p>

<p style="margin:0 0 16px 0;font-size:15px;line-height:1.6;color:#4a5568;">
  A qualified specialist has accepted your case and is now reviewing your medical files. You will receive your detailed report once the review is complete.
</p>

<!-- Case details box -->
<table role="presentation" width="100%" cellpadding="0" cellspacing="0" style="margin:24px 0;background-color:#ebf8ff;border-radius:8px;border:1px solid #bee3f8;">
  <tr>
    <td style="padding:20px 24px;">
      <p style="margin:0 0 8px 0;font-size:13px;font-weight:600;color:#2b6cb0;text-transform:uppercase;letter-spacing:0.5px;">Case In Review</p>

      <table role="presentation" width="100%" cellpadding="0" cellspacing="0">
        {{#if caseReference}}
        <tr>
          <td style="padding:6px 0;font-size:14px;color:#718096;width:140px;">Reference:</td>
          <td style="padding:6px 0;font-size:14px;font-weight:600;color:#2d3748;">{{caseReference}}</td>
        </tr>
        {{/if}}
        {{#if specialty}}
        <tr>
          <td style="padding:6px 0;font-size:14px;color:#718096;width:140px;">Specialty:</td>
          <td style="padding:6px 0;font-size:14px;color:#2d3748;">{{specialty}}</td>
        </tr>
        {{/if}}
        {{#if doctorName}}
        <tr>
          <td style="padding:6px 0;font-size:14px;color:#718096;width:140px;">Specialist:</td>
          <td style="padding:6px 0;font-size:14px;color:#2d3748;">Dr. {{doctorName}}</td>
        </tr>
        {{/if}}
        {{#if slaHours}}
        <tr>
          <td style="padding:6px 0;font-size:14px;color:#718096;width:140px;">Expected By:</td>
          <td style="padding:6px 0;font-size:14px;color:#2d3748;">Within {{slaHours}} hours</td>
        </tr>
        {{/if}}
      </table>
    </td>
  </tr>
</table>

{{#if dashboardUrl}}
<table role="presentation" cellpadding="0" cellspacing="0" style="margin:0 auto;">
  <tr>
    <td align="center" style="background-color:#2b6cb0;border-radius:8px;">
      <a href="{{dashboardUrl}}" style="display:inline-block;padding:14px 32px;font-size:15px;font-weight:600;color:#ffffff;text-decoration:none;">
        Track Your Case
      </a>
    </td>
  </tr>
</table>
{{/if}}

<p style="margin:24px 0 0 0;font-size:13px;color:#a0aec0;line-height:1.5;">
  You'll receive another notification when your report is ready for review.
</p>
