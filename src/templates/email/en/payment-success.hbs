<!-- Payment Success â€” Patient confirmation -->
<h2 style="margin:0 0 16px 0;font-size:22px;font-weight:700;color:#1a365d;">
  Payment Confirmed
</h2>

<p style="margin:0 0 16px 0;font-size:15px;line-height:1.6;color:#4a5568;">
  Hi {{patientName}},
</p>

<p style="margin:0 0 16px 0;font-size:15px;line-height:1.6;color:#4a5568;">
  Your payment has been successfully processed. Your case is now active and our medical team will begin reviewing it shortly.
</p>

<!-- Payment details box -->
<table role="presentation" width="100%" cellpadding="0" cellspacing="0" style="margin:24px 0;background-color:#f0fff4;border-radius:8px;border:1px solid #c6f6d5;">
  <tr>
    <td style="padding:20px 24px;">
      <p style="margin:0 0 8px 0;font-size:13px;font-weight:600;color:#276749;text-transform:uppercase;letter-spacing:0.5px;">Payment Received</p>

      <table role="presentation" width="100%" cellpadding="0" cellspacing="0">
        {{#if caseReference}}
        <tr>
          <td style="padding:6px 0;font-size:14px;color:#718096;width:140px;">Reference:</td>
          <td style="padding:6px 0;font-size:14px;font-weight:600;color:#2d3748;">{{caseReference}}</td>
        </tr>
        {{/if}}
        {{#if amount}}
        <tr>
          <td style="padding:6px 0;font-size:14px;color:#718096;width:140px;">Amount:</td>
          <td style="padding:6px 0;font-size:14px;font-weight:600;color:#276749;">{{amount}} {{currency}}</td>
        </tr>
        {{/if}}
        {{#if paymentMethod}}
        <tr>
          <td style="padding:6px 0;font-size:14px;color:#718096;width:140px;">Method:</td>
          <td style="padding:6px 0;font-size:14px;color:#2d3748;">{{paymentMethod}}</td>
        </tr>
        {{/if}}
      </table>
    </td>
  </tr>
</table>

{{#if dashboardUrl}}
<table role="presentation" cellpadding="0" cellspacing="0" style="margin:0 auto;">
  <tr>
    <td align="center" style="background-color:#38b2ac;border-radius:8px;">
      <a href="{{dashboardUrl}}" style="display:inline-block;padding:14px 32px;font-size:15px;font-weight:600;color:#ffffff;text-decoration:none;">
        View Your Case
      </a>
    </td>
  </tr>
</table>
{{/if}}

<p style="margin:24px 0 0 0;font-size:13px;color:#a0aec0;line-height:1.5;">
  A specialist will be assigned to your case soon. You'll be notified when they begin their review.
</p>
