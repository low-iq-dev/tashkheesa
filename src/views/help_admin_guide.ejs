<%
  const isAr = (typeof lang !== 'undefined' && lang === 'ar');
  const dir = isAr ? 'rtl' : 'ltr';
%>
<!DOCTYPE html>
<html lang="<%= isAr ? 'ar' : 'en' %>" dir="<%= dir %>">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= isAr ? 'دليل لوحة الإدارة — تشخيصة' : 'Admin Dashboard Guide — Tashkheesa' %></title>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  <style>
    *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
    body {
      font-family: 'DM Sans', 'Inter', system-ui, sans-serif;
      background: #f8fafc; color: #1e293b; line-height: 1.6;
    }
    .guide-container { max-width: 900px; margin: 0 auto; padding: 32px 24px; }
    .guide-cover {
      background: linear-gradient(135deg, #1e293b 0%, #334155 50%, #475569 100%);
      color: #fff; border-radius: 16px; padding: 60px 40px; text-align: center; margin-bottom: 40px;
    }
    .guide-cover-logo {
      width: 72px; height: 72px; background: rgba(255,255,255,.15);
      border-radius: 18px; display: flex; align-items: center; justify-content: center;
      margin: 0 auto 20px; font-size: 32px; font-weight: 800; color: #fff;
    }
    .guide-cover h1 { font-size: 32px; font-weight: 800; margin-bottom: 8px; }
    .guide-cover p { font-size: 16px; opacity: .85; max-width: 500px; margin: 0 auto; }
    .guide-actions {
      display: flex; gap: 12px; justify-content: center; flex-wrap: wrap; margin-bottom: 40px;
    }
    .guide-actions button, .guide-actions a {
      padding: 10px 24px; border-radius: 8px; font-size: 14px; font-weight: 600;
      cursor: pointer; border: 1px solid #e2e8f0; background: #fff; color: #334155;
      text-decoration: none; display: inline-flex; align-items: center; gap: 6px; font-family: inherit;
    }
    .guide-actions .btn-primary { background: #334155; color: #fff; border-color: #334155; }
    .guide-actions .btn-primary:hover { background: #1e293b; }
    .guide-step {
      background: #fff; border-radius: 14px; padding: 32px;
      margin-bottom: 24px; border: 1px solid #e2e8f0;
    }
    .guide-step-number {
      display: inline-flex; align-items: center; gap: 6px;
      font-size: 11px; font-weight: 700; text-transform: uppercase; letter-spacing: .5px;
      color: #475569; background: #f1f5f9; padding: 4px 12px; border-radius: 6px; margin-bottom: 16px;
    }
    .guide-step h2 { font-size: 20px; font-weight: 700; margin-bottom: 8px; color: #0f172a; }
    .guide-step p { font-size: 14px; color: #475569; margin-bottom: 12px; }
    .guide-tip {
      background: #f1f5f9; border: 1px solid #cbd5e1; border-radius: 8px;
      padding: 10px 14px; font-size: 13px; color: #334155;
    }
    .guide-toc { margin-bottom: 40px; }
    .guide-toc h2 { font-size: 18px; font-weight: 700; margin-bottom: 12px; }
    .guide-toc ol { padding-<%= isAr ? 'right' : 'left' %>: 20px; }
    .guide-toc li { font-size: 14px; color: #475569; margin-bottom: 6px; }
    .guide-toc a { color: #475569; text-decoration: none; }
    .guide-toc a:hover { text-decoration: underline; }

    /* CSS Mockup Illustrations */
    .guide-mockup {
      background: #f1f5f9; border-radius: 12px; overflow: hidden;
      border: 1px solid #e2e8f0; margin-bottom: 20px; font-family: 'DM Sans', sans-serif;
    }
    .mockup-browser-bar {
      background: #f8fafc; border-bottom: 1px solid #e2e8f0;
      padding: 8px 12px; display: flex; align-items: center; gap: 6px;
    }
    .mockup-dot { width: 8px; height: 8px; border-radius: 50%; background: #d1d5db; }
    .mockup-dot:first-child { background: #fca5a5; }
    .mockup-dot:nth-child(2) { background: #fcd34d; }
    .mockup-dot:nth-child(3) { background: #86efac; }
    .mockup-url {
      margin-left: 12px; font-size: 11px; color: #94a3b8;
      background: #fff; padding: 3px 12px; border-radius: 4px; border: 1px solid #e2e8f0;
    }
    .mockup-content {
      padding: 24px; min-height: 240px; display: flex;
      align-items: center; justify-content: center;
    }
    .mockup-layout {
      display: flex; min-height: 280px; border-radius: 10px;
      overflow: hidden; border: 1px solid #e2e8f0; background: #f1f5f9; width: 100%;
    }
    .mockup-sidebar {
      width: 140px; min-width: 140px; background: #1e293b; border-right: 1px solid #334155;
      padding: 14px 10px; display: flex; flex-direction: column; gap: 4px;
    }
    .mockup-sidebar-brand { font-size: 13px; font-weight: 700; color: #fff; margin-bottom: 10px; padding: 0 6px; }
    .mockup-nav-item { padding: 5px 10px; border-radius: 6px; font-size: 10px; color: #94a3b8; }
    .mockup-nav-item.active { background: #334155; color: #fff; font-weight: 600; }
    .mockup-main { flex: 1; padding: 14px; overflow: hidden; background: #f8fafc; }
    .mockup-heading { font-size: 13px; font-weight: 700; color: #0f172a; margin-bottom: 10px; }
    .mockup-subtext { font-size: 10px; color: #94a3b8; }
    .mockup-kpi-row { display: grid; grid-template-columns: repeat(3, 1fr); gap: 8px; margin-bottom: 12px; }
    .mockup-kpi {
      background: #fff; border: 1px solid #e2e8f0; border-radius: 8px; padding: 8px 10px;
      border-left: 3px solid #334155;
    }
    .mockup-kpi-value { font-size: 15px; font-weight: 700; color: #0f172a; }
    .mockup-kpi-label { font-size: 8px; color: #94a3b8; }
    .mockup-table-row {
      display: flex; align-items: center; gap: 8px; background: #fff;
      border: 1px solid #e2e8f0; border-radius: 6px; padding: 6px 10px;
      margin-bottom: 4px; font-size: 9px; color: #475569;
    }
    .mockup-badge { font-size: 8px; padding: 2px 6px; border-radius: 4px; font-weight: 600; }
    .mockup-badge-green { background: #ecfdf5; color: #059669; }
    .mockup-badge-amber { background: #fffbeb; color: #d97706; }
    .mockup-badge-red { background: #fef2f2; color: #dc2626; }
    .mockup-badge-blue { background: #eff6ff; color: #2563eb; }
    .mockup-badge-slate { background: #f1f5f9; color: #475569; }
    .mockup-btn {
      background: #334155; color: #fff; padding: 8px 16px; border-radius: 6px;
      font-size: 12px; font-weight: 600; text-align: center;
    }
    .mockup-btn-outline {
      background: #fff; color: #334155; border: 1px solid #334155;
      padding: 6px 14px; border-radius: 6px; font-size: 11px; font-weight: 600; text-align: center;
    }
    .mockup-card {
      background: #fff; padding: 16px; border-radius: 12px;
      box-shadow: 0 4px 12px rgba(0,0,0,.06); border: 1px solid #e2e8f0;
    }
    .mockup-input {
      background: #f8fafc; border: 1px solid #e2e8f0; border-radius: 6px;
      padding: 8px 12px; font-size: 11px; color: #94a3b8; margin-bottom: 8px; text-align: left;
    }
    .mockup-textarea {
      background: #fff; border: 1px solid #e2e8f0; border-radius: 8px;
      padding: 10px; font-size: 10px; color: #94a3b8; min-height: 50px;
      margin-bottom: 8px; text-align: left; width: 100%;
    }
    .mockup-form-label { font-size: 10px; font-weight: 600; color: #334155; margin-bottom: 4px; }
    .mockup-form-group { margin-bottom: 10px; text-align: left; }
    .mockup-divider { height: 1px; background: #e2e8f0; margin: 10px 0; }
    .mockup-alert-strip {
      display: flex; gap: 8px; padding: 8px 10px; border-radius: 6px;
      font-size: 9px; align-items: center; margin-bottom: 6px;
    }
    .mockup-alert-red { background: #fef2f2; color: #dc2626; border: 1px solid #fecaca; }
    .mockup-alert-amber { background: #fffbeb; color: #d97706; border: 1px solid #fde68a; }
    .mockup-issue-card {
      background: #fff; border: 1px solid #e2e8f0; border-radius: 8px;
      padding: 10px; margin-bottom: 6px;
    }
    .mockup-chart-bar {
      display: flex; align-items: flex-end; gap: 6px; height: 80px; padding-top: 8px;
    }
    .mockup-bar { flex: 1; border-radius: 3px 3px 0 0; min-width: 16px; }
    .mockup-status-row {
      display: flex; align-items: center; gap: 8px; padding: 6px 0;
    }
    .mockup-status-dot {
      width: 8px; height: 8px; border-radius: 50%;
    }

    @media print {
      body { background: #fff; }
      .guide-container { max-width: 100%; padding: 0; }
      .guide-actions { display: none !important; }
      .guide-step { break-inside: avoid; page-break-inside: avoid; border: 1px solid #ddd; }
      .guide-cover { break-after: page; }
    }
    @media (max-width: 640px) {
      .guide-cover { padding: 40px 24px; }
      .guide-cover h1 { font-size: 24px; }
      .guide-step { padding: 20px; }
      .mockup-layout { flex-direction: column; }
      .mockup-sidebar { width: 100%; min-width: 100%; flex-direction: row; flex-wrap: wrap; border-right: none; border-bottom: 1px solid #334155; }
      .mockup-kpi-row { grid-template-columns: repeat(2, 1fr); }
    }
  </style>
</head>
<body>
  <div class="guide-container">
    <div class="guide-cover">
      <div class="guide-cover-logo">T</div>
      <h1><%= isAr ? 'دليل لوحة الإدارة' : 'Admin Dashboard Guide' %></h1>
      <p><%= isAr ? 'كيف تدير العمليات والحالات والأطباء على منصة تشخيصة' : 'How to manage operations, cases, and doctors on Tashkheesa' %></p>
    </div>

    <div class="guide-actions">
      <button class="btn-primary" onclick="window.print()"><%= isAr ? 'تحميل PDF' : 'Download as PDF' %></button>
      <a href="<%= isAr ? '/help/admin-guide' : '/help/ar/admin-guide' %>"><%= isAr ? 'English' : 'العربية' %></a>
      <a href="/admin"><%= isAr ? 'العودة للوحة التحكم' : 'Back to Dashboard' %></a>
    </div>

    <div class="guide-toc">
      <h2><%= isAr ? 'جدول المحتويات' : 'Table of Contents' %></h2>
      <ol>
        <li><a href="#step-1"><%= isAr ? 'لوحة العمليات' : 'Operations Dashboard' %></a></li>
        <li><a href="#step-2"><%= isAr ? 'مؤشرات الأداء' : 'KPI Overview' %></a></li>
        <li><a href="#step-3"><%= isAr ? 'إدارة الحالات' : 'Case Management' %></a></li>
        <li><a href="#step-4"><%= isAr ? 'إدارة الأطباء' : 'Doctor Management' %></a></li>
        <li><a href="#step-5"><%= isAr ? 'مشاكل المرضى' : 'Patient Issues' %></a></li>
        <li><a href="#step-6"><%= isAr ? 'إدارة المحادثات' : 'Chat Moderation' %></a></li>
        <li><a href="#step-7"><%= isAr ? 'الخدمات والتسعير' : 'Services & Pricing' %></a></li>
        <li><a href="#step-8"><%= isAr ? 'الحملات والإحالات' : 'Campaigns & Referrals' %></a></li>
        <li><a href="#step-9"><%= isAr ? 'التحليلات' : 'Analytics' %></a></li>
        <li><a href="#step-10"><%= isAr ? 'صحة النظام' : 'System Health' %></a></li>
      </ol>
    </div>

    <!-- Step 1: Operations Dashboard -->
    <div class="guide-step" id="step-1">
      <div class="guide-step-number"><%= isAr ? 'الخطوة ١ من ١٠' : 'Step 1 of 10' %></div>
      <div class="guide-mockup">
        <div class="mockup-browser-bar">
          <span class="mockup-dot"></span><span class="mockup-dot"></span><span class="mockup-dot"></span>
          <span class="mockup-url">tashkheesa.com/admin</span>
        </div>
        <div class="mockup-layout">
          <div class="mockup-sidebar">
            <div class="mockup-sidebar-brand">Command Center</div>
            <div class="mockup-nav-item active"><%= isAr ? 'العمليات' : 'Operations' %></div>
            <div class="mockup-nav-item"><%= isAr ? 'الحالات' : 'Cases' %></div>
            <div class="mockup-nav-item"><%= isAr ? 'الأطباء' : 'Doctors' %></div>
            <div class="mockup-nav-item"><%= isAr ? 'الخدمات' : 'Services' %></div>
            <div class="mockup-nav-item"><%= isAr ? 'الحملات' : 'Campaigns' %></div>
            <div class="mockup-nav-item"><%= isAr ? 'التحليلات' : 'Analytics' %></div>
            <div class="mockup-nav-item"><%= isAr ? 'الأخطاء' : 'Error Log' %></div>
          </div>
          <div class="mockup-main">
            <div class="mockup-heading"><%= isAr ? 'مركز العمليات' : 'Operations Center' %></div>
            <div class="mockup-alert-strip mockup-alert-red">
              <svg width="10" height="10" fill="none" stroke="currentColor" stroke-width="2"><circle cx="5" cy="5" r="4"/><line x1="5" y1="3" x2="5" y2="5"/><circle cx="5" cy="7" r=".5" fill="currentColor"/></svg>
              <span><%= isAr ? '3 حالات تجاوزت SLA' : '3 cases breached SLA' %></span>
            </div>
            <div class="mockup-kpi-row">
              <div class="mockup-kpi"><div class="mockup-kpi-value">284</div><div class="mockup-kpi-label"><%= isAr ? 'إجمالي' : 'Total Cases' %></div></div>
              <div class="mockup-kpi" style="border-left-color:#d97706;"><div class="mockup-kpi-value">12</div><div class="mockup-kpi-label"><%= isAr ? 'معلقة' : 'Pending' %></div></div>
              <div class="mockup-kpi" style="border-left-color:#dc2626;"><div class="mockup-kpi-value">3</div><div class="mockup-kpi-label"><%= isAr ? 'تجاوزت SLA' : 'Breached' %></div></div>
            </div>
            <div class="mockup-table-row">
              <span class="mockup-badge mockup-badge-red">SLA</span>
              <span style="flex:1;">Case #44 — Overdue</span>
              <span class="mockup-btn" style="padding:3px 8px;font-size:8px;">Review</span>
            </div>
          </div>
        </div>
      </div>
      <h2><%= isAr ? 'لوحة العمليات' : 'Operations Dashboard' %></h2>
      <p><%= isAr ? 'لوحة العمليات هي نظرة عامة على جميع أنشطة المنصة. تعرض مؤشرات الأداء الرئيسية والتنبيهات العاجلة ومشاكل المرضى والحالات الأخيرة.' : 'The operations dashboard is your overview of all platform activity. It shows KPIs, urgent alerts, patient issues, and recent cases.' %></p>
    </div>

    <!-- Step 2: KPI Overview -->
    <div class="guide-step" id="step-2">
      <div class="guide-step-number"><%= isAr ? 'الخطوة ٢ من ١٠' : 'Step 2 of 10' %></div>
      <div class="guide-mockup">
        <div class="mockup-browser-bar">
          <span class="mockup-dot"></span><span class="mockup-dot"></span><span class="mockup-dot"></span>
          <span class="mockup-url">tashkheesa.com/admin</span>
        </div>
        <div class="mockup-content" style="flex-direction:column;align-items:stretch;padding:20px;">
          <div class="mockup-heading"><%= isAr ? 'مؤشرات الأداء الرئيسية' : 'Key Performance Indicators' %></div>
          <div class="mockup-kpi-row" style="grid-template-columns:repeat(3,1fr);">
            <div class="mockup-kpi">
              <div class="mockup-kpi-value">284</div>
              <div class="mockup-kpi-label"><%= isAr ? 'إجمالي الحالات' : 'Total Cases' %></div>
            </div>
            <div class="mockup-kpi" style="border-left-color:#d97706;">
              <div class="mockup-kpi-value">12</div>
              <div class="mockup-kpi-label"><%= isAr ? 'معلقة' : 'Pending' %></div>
            </div>
            <div class="mockup-kpi" style="border-left-color:#059669;">
              <div class="mockup-kpi-value">269</div>
              <div class="mockup-kpi-label"><%= isAr ? 'مكتملة' : 'Completed' %></div>
            </div>
          </div>
          <div class="mockup-kpi-row" style="grid-template-columns:repeat(3,1fr);">
            <div class="mockup-kpi" style="border-left-color:#dc2626;">
              <div class="mockup-kpi-value">3</div>
              <div class="mockup-kpi-label"><%= isAr ? 'تجاوزت SLA' : 'SLA Breached' %></div>
            </div>
            <div class="mockup-kpi" style="border-left-color:#2563eb;">
              <div class="mockup-kpi-value">94%</div>
              <div class="mockup-kpi-label"><%= isAr ? 'نسبة الالتزام' : 'On-Time Rate' %></div>
            </div>
            <div class="mockup-kpi" style="border-left-color:#8b5cf6;">
              <div class="mockup-kpi-value">22h</div>
              <div class="mockup-kpi-label"><%= isAr ? 'متوسط التسليم' : 'Avg. Turnaround' %></div>
            </div>
          </div>
        </div>
      </div>
      <h2><%= isAr ? 'مؤشرات الأداء' : 'KPI Overview' %></h2>
      <p><%= isAr ? 'راقب إجمالي الحالات والمعلقة والمكتملة والمخالفة لـ SLA ونسبة الالتزام بالمواعيد ومتوسط وقت التسليم في لمحة واحدة. المؤشرات الحمراء تحتاج انتباه فوري.' : 'Monitor total cases, pending, completed, SLA breached, on-time rate, and average turnaround at a glance. Red indicators need immediate attention.' %></p>
    </div>

    <!-- Step 3: Case Management -->
    <div class="guide-step" id="step-3">
      <div class="guide-step-number"><%= isAr ? 'الخطوة ٣ من ١٠' : 'Step 3 of 10' %></div>
      <div class="guide-mockup">
        <div class="mockup-browser-bar">
          <span class="mockup-dot"></span><span class="mockup-dot"></span><span class="mockup-dot"></span>
          <span class="mockup-url">tashkheesa.com/admin/orders</span>
        </div>
        <div class="mockup-content" style="flex-direction:column;align-items:stretch;padding:20px;">
          <div style="display:flex;justify-content:space-between;align-items:center;margin-bottom:10px;">
            <div class="mockup-heading" style="margin-bottom:0;"><%= isAr ? 'جميع الحالات' : 'All Cases' %></div>
            <div style="display:flex;gap:6px;">
              <div class="mockup-input" style="margin:0;font-size:9px;padding:4px 8px;width:100px;"><%= isAr ? 'بحث...' : 'Search...' %></div>
              <div class="mockup-badge mockup-badge-slate" style="padding:4px 8px;font-size:9px;cursor:pointer;"><%= isAr ? 'الكل' : 'All' %></div>
              <div class="mockup-badge mockup-badge-amber" style="padding:4px 8px;font-size:9px;cursor:pointer;"><%= isAr ? 'معلقة' : 'Pending' %></div>
            </div>
          </div>
          <div class="mockup-table-row" style="font-weight:600;background:#f8fafc;font-size:8px;text-transform:uppercase;color:#64748b;">
            <span style="width:40px;">#</span>
            <span style="flex:1;"><%= isAr ? 'المريض' : 'Patient' %></span>
            <span style="width:70px;"><%= isAr ? 'الطبيب' : 'Doctor' %></span>
            <span style="width:60px;"><%= isAr ? 'الخدمة' : 'Service' %></span>
            <span style="width:60px;"><%= isAr ? 'الحالة' : 'Status' %></span>
            <span style="width:50px;"><%= isAr ? 'إجراء' : 'Action' %></span>
          </div>
          <div class="mockup-table-row">
            <span style="width:40px;font-weight:600;">#48</span>
            <span style="flex:1;">Sarah J.</span>
            <span style="width:70px;">Dr. Ahmed</span>
            <span style="width:60px;">MRI</span>
            <span style="width:60px;"><span class="mockup-badge mockup-badge-blue">Review</span></span>
            <span style="width:50px;"><span class="mockup-btn" style="padding:2px 6px;font-size:7px;">View</span></span>
          </div>
          <div class="mockup-table-row">
            <span style="width:40px;font-weight:600;">#47</span>
            <span style="flex:1;">Ahmed M.</span>
            <span style="width:70px;">—</span>
            <span style="width:60px;">X-Ray</span>
            <span style="width:60px;"><span class="mockup-badge mockup-badge-amber">Pending</span></span>
            <span style="width:50px;"><span class="mockup-btn" style="padding:2px 6px;font-size:7px;">Assign</span></span>
          </div>
          <div class="mockup-table-row">
            <span style="width:40px;font-weight:600;">#46</span>
            <span style="flex:1;">Fatma H.</span>
            <span style="width:70px;">Dr. Laila</span>
            <span style="width:60px;">CT</span>
            <span style="width:60px;"><span class="mockup-badge mockup-badge-green">Done</span></span>
            <span style="width:50px;"><span class="mockup-btn" style="padding:2px 6px;font-size:7px;">View</span></span>
          </div>
        </div>
      </div>
      <h2><%= isAr ? 'إدارة الحالات' : 'Case Management' %></h2>
      <p><%= isAr ? 'اعرض وأدر جميع الحالات من صفحة الحالات. يمكنك تعيين أطباء وتغيير الحالة ومراقبة المواعيد النهائية. استخدم الفلاتر للعثور على حالات محددة.' : 'View and manage all cases from the Cases page. You can assign doctors, change status, and monitor deadlines. Use filters to find specific cases.' %></p>
    </div>

    <!-- Step 4: Doctor Management -->
    <div class="guide-step" id="step-4">
      <div class="guide-step-number"><%= isAr ? 'الخطوة ٤ من ١٠' : 'Step 4 of 10' %></div>
      <div class="guide-mockup">
        <div class="mockup-browser-bar">
          <span class="mockup-dot"></span><span class="mockup-dot"></span><span class="mockup-dot"></span>
          <span class="mockup-url">tashkheesa.com/admin/doctors</span>
        </div>
