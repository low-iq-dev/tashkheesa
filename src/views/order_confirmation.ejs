<%- include('partials/header', { title: "Case Submitted", layout: "public", showNav: false, showFooter: false }) %>

<div class="page-shell">
  <div class="page-inner">
    <main>
      <div class="page-heading">
        <h1>Your case has been submitted.</h1>
        <p class="flow-note">
          We received your details and will assign a specialist shortly.
        </p>
      </div>

      <div class="flow-card primary">
        <h3>Case summary</h3>
        <ul class="flow-list">
          <li><strong>Reason for review:</strong> <%= order.reason || '-' %></li>
          <li><strong>Preferred language:</strong> <%= order.language || 'English' %></li>
          <li><strong>Turnaround:</strong> <%= order.sla_hours === 24 ? 'Fast track (24h)' : 'Standard (72h)' %></li>
        </ul>
      </div>

      <div class="flow-card soft">
        <h3>Uploaded files</h3>
        <% if (order.files && order.files.length) { %>
          <ul class="flow-list">
            <% order.files.forEach(function(f) { %>
              <li><%= f.originalname || f.filename || f.label || f.url || f.file_url || 'File' %></li>
            <% }); %>
          </ul>
        <% } else { %>
          <p class="flow-note">No files were attached.</p>
        <% } %>
      </div>

      <div class="flow-card">
        <p>
          Your case has been successfully submitted.
          <br/><br/>
          To access your case and track progress, log in to the patient portal using the same email you submitted.
          <br/><br/>
          If this is your first time, use “Forgot password” on the login page to set your password.
        </p>

        <div class="section-cta">
          <a href="/login" class="btn btn-primary">Go to login</a>
          <a href="/" class="btn btn-secondary">Back to home</a>
        </div>
      </div>
    </main>
  </div>
</div>

<%- include('partials/footer', { showFooter: false }) %>
