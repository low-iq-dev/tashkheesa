<%- include('partials/header', { title: 'Payment required' }) %>

<%
  // HARD GUARD: never allow undefined in template logic
  const safePaymentUrl =
    (typeof paymentUrl !== 'undefined' && paymentUrl)
      ? paymentUrl
      : null;
%>

<div class="container" style="max-width:720px;margin:60px auto;">
  <h1>Payment required</h1>
  <p>This case has been created but payment has not yet been completed.</p>

  <% if (safePaymentUrl) { %>
    <a href="<%= safePaymentUrl %>" class="btn btn-primary">
      Proceed to payment
    </a>
  <% } else { %>
    <p><em>Payment link is not available yet. Please check back shortly.</em></p>
  <% } %>
</div>

<%- include('partials/footer') %>