<%- include('partials/header', { title: ((typeof lang !== 'undefined' && lang === 'ar') ? "دليل بوابة المريض" : "Patient Portal Guide"), layout: "portal", showNav: false, showFooter: false }) %>
<%
  const isAr = (typeof lang !== 'undefined' && lang === 'ar');
  const brandSafe = (typeof brand !== 'undefined' && brand) ? brand : 'Tashkheesa';
%>

<style>
  /* Guide-specific styles */
  .guide-actions {
    display: flex; gap: 12px; flex-wrap: wrap; margin-bottom: 24px;
  }
  .guide-actions button, .guide-actions a {
    padding: 8px 20px; border-radius: 8px; font-size: 13px; font-weight: 600;
    cursor: pointer; border: 1px solid var(--p1-border); background: var(--p1-surface); color: var(--p1-text);
    text-decoration: none; display: inline-flex; align-items: center; gap: 6px;
    font-family: inherit;
  }
  .guide-actions .btn-primary { background: var(--p1-primary); color: #fff; border-color: var(--p1-primary); }
  .guide-actions .btn-primary:hover { opacity: 0.9; }

  .guide-step { margin-bottom: 18px; }
  .guide-step-number {
    display: inline-flex; align-items: center; gap: 6px;
    font-size: 11px; font-weight: 700; text-transform: uppercase; letter-spacing: .5px;
    color: var(--p1-primary); background: var(--p1-primary-light, #eff6ff); padding: 4px 12px; border-radius: 6px;
    margin-bottom: 14px;
  }
  .guide-step h2 { font-size: 1.1rem; font-weight: 700; margin-bottom: 6px; color: var(--p1-text); }
  .guide-step p { font-size: 0.85rem; color: var(--p1-text2); margin-bottom: 10px; }
  .guide-tip {
    background: var(--p1-warn-light, #fffbeb); border: 1px solid #fde68a; border-radius: 8px;
    padding: 10px 14px; font-size: 0.8rem; color: #92400e;
  }

  .guide-toc { margin-bottom: 24px; }
  .guide-toc h3 { font-size: 1rem; font-weight: 700; margin-bottom: 10px; }
  .guide-toc ol { padding-<%= isAr ? 'right' : 'left' %>: 20px; }
  .guide-toc li { font-size: 0.85rem; color: var(--p1-text2); margin-bottom: 5px; }
  .guide-toc a { color: var(--p1-primary); text-decoration: none; }
  .guide-toc a:hover { text-decoration: underline; }

  /* CSS Mockup Illustrations */
  .guide-mockup {
    background: var(--p1-bg, #f1f5f9); border-radius: 10px; overflow: hidden;
    border: 1px solid var(--p1-border); margin-bottom: 14px; font-family: 'DM Sans', sans-serif;
  }
  .mockup-browser-bar {
    background: var(--p1-surface, #f8fafc); border-bottom: 1px solid var(--p1-border);
    padding: 6px 10px; display: flex; align-items: center; gap: 5px;
  }
  .mockup-dot { width: 7px; height: 7px; border-radius: 50%; background: #d1d5db; }
  .mockup-dot:first-child { background: #fca5a5; }
  .mockup-dot:nth-child(2) { background: #fcd34d; }
  .mockup-dot:nth-child(3) { background: #86efac; }
  .mockup-url {
    margin-left: 10px; font-size: 10px; color: var(--p1-text3);
    background: var(--p1-surface); padding: 2px 10px; border-radius: 4px; border: 1px solid var(--p1-border);
  }
  .mockup-content {
    padding: 20px; min-height: 200px; display: flex; align-items: center; justify-content: center;
  }
  .mockup-card {
    background: var(--p1-surface); padding: 20px; border-radius: 10px;
    box-shadow: 0 2px 8px rgba(0,0,0,.05); width: 220px; text-align: center;
  }
  .mockup-input {
    background: var(--p1-bg); border: 1px solid var(--p1-border); border-radius: 6px;
    padding: 6px 10px; font-size: 10px; color: var(--p1-text3); margin-bottom: 6px; text-align: left;
  }
  .mockup-btn {
    background: var(--p1-primary); color: #fff; padding: 7px 14px; border-radius: 6px;
    font-size: 11px; font-weight: 600; margin-top: 4px; text-align: center;
  }
  .mockup-btn-outline {
    background: var(--p1-surface); color: var(--p1-primary); border: 1px solid var(--p1-primary);
    padding: 5px 12px; border-radius: 6px; font-size: 10px; font-weight: 600;
  }
  .mockup-layout {
    display: flex; min-height: 220px; border-radius: 8px; overflow: hidden;
    border: 1px solid var(--p1-border); background: var(--p1-bg); width: 100%;
  }
  .mockup-sidebar {
    width: 120px; min-width: 120px; background: var(--p1-surface); border-right: 1px solid var(--p1-border);
    padding: 12px 8px; display: flex; flex-direction: column; gap: 3px;
  }
  .mockup-sidebar-brand { font-size: 12px; font-weight: 700; color: var(--p1-primary); margin-bottom: 8px; padding: 0 4px; }
  .mockup-nav-item { padding: 4px 8px; border-radius: 5px; font-size: 9px; color: var(--p1-text3); }
  .mockup-nav-item.active { background: var(--p1-primary-light, #eff6ff); color: var(--p1-primary); font-weight: 600; }
  .mockup-main { flex: 1; padding: 12px; overflow: hidden; }
  .mockup-kpi-row { display: grid; grid-template-columns: repeat(3, 1fr); gap: 6px; margin-bottom: 10px; }
  .mockup-kpi {
    background: var(--p1-surface); border: 1px solid var(--p1-border); border-radius: 6px; padding: 6px 8px;
    border-left: 3px solid var(--p1-primary);
  }
  .mockup-kpi-value { font-size: 14px; font-weight: 700; color: var(--p1-text); }
  .mockup-kpi-label { font-size: 7px; color: var(--p1-text3); }
  .mockup-table-row {
    display: flex; align-items: center; gap: 6px; background: var(--p1-surface);
    border: 1px solid var(--p1-border); border-radius: 5px; padding: 5px 8px;
    margin-bottom: 3px; font-size: 9px; color: var(--p1-text2);
  }
  .mockup-badge { font-size: 7px; padding: 2px 5px; border-radius: 3px; font-weight: 600; }
  .mockup-badge-blue { background: #eff6ff; color: #2563eb; }
  .mockup-badge-green { background: #ecfdf5; color: #059669; }
  .mockup-badge-amber { background: #fffbeb; color: #d97706; }
  .mockup-heading { font-size: 12px; font-weight: 700; color: var(--p1-text); margin-bottom: 8px; }
  .mockup-subtext { font-size: 9px; color: var(--p1-text3); }
  .mockup-service-grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 6px; }
  .mockup-service-card {
    background: var(--p1-surface); border: 1px solid var(--p1-border); border-radius: 6px;
    padding: 10px; text-align: center;
  }
  .mockup-service-icon {
    width: 28px; height: 28px; border-radius: 6px; background: #eff6ff;
    margin: 0 auto 4px; display: flex; align-items: center; justify-content: center; font-size: 12px;
  }
  .mockup-service-name { font-size: 9px; font-weight: 600; color: var(--p1-text); }
  .mockup-service-price { font-size: 8px; color: var(--p1-primary); margin-top: 2px; }
  .mockup-dropzone {
    border: 2px dashed var(--p1-border); border-radius: 10px; padding: 24px;
    text-align: center; background: var(--p1-surface);
  }
  .mockup-upload-icon {
    width: 40px; height: 40px; border-radius: 10px; background: #eff6ff;
    margin: 0 auto 8px; display: flex; align-items: center; justify-content: center;
  }
  .mockup-textarea {
    background: var(--p1-surface); border: 1px solid var(--p1-border); border-radius: 6px;
    padding: 8px; font-size: 9px; color: var(--p1-text3); min-height: 50px;
    margin-bottom: 6px; text-align: left; width: 100%;
  }
  .mockup-form-label { font-size: 9px; font-weight: 600; color: var(--p1-text); margin-bottom: 3px; }
  .mockup-form-group { margin-bottom: 8px; text-align: left; }
  .mockup-timeline { display: flex; flex-direction: column; gap: 0; padding: 0 16px; }
  .mockup-timeline-item {
    display: flex; gap: 10px; align-items: flex-start; position: relative; padding-bottom: 14px;
  }
  .mockup-timeline-dot {
    width: 10px; height: 10px; border-radius: 50%; background: var(--p1-border);
    flex-shrink: 0; position: relative; z-index: 1;
  }
  .mockup-timeline-dot.done { background: #059669; }
  .mockup-timeline-dot.active { background: var(--p1-primary); box-shadow: 0 0 0 3px #bfdbfe; }
  .mockup-timeline-item:not(:last-child)::before {
    content: ''; position: absolute; left: 4px; top: 10px; bottom: 0;
    width: 2px; background: var(--p1-border);
  }
  .mockup-timeline-text { font-size: 9px; color: var(--p1-text2); }
  .mockup-timeline-text strong { color: var(--p1-text); display: block; }
  .mockup-pdf-icon {
    width: 56px; height: 70px; background: var(--p1-surface); border: 1px solid var(--p1-border);
    border-radius: 6px; margin: 0 auto 8px; display: flex; align-items: center;
    justify-content: center; font-size: 9px; font-weight: 700; color: #dc2626; position: relative;
  }
  .mockup-pdf-icon::after {
    content: 'PDF'; position: absolute; bottom: 5px; font-size: 8px;
    background: #fef2f2; padding: 1px 5px; border-radius: 3px;
  }
  .mockup-calendar { display: grid; grid-template-columns: repeat(7, 1fr); gap: 2px; }
  .mockup-cal-day {
    aspect-ratio: 1; border-radius: 3px; display: flex; align-items: center;
    justify-content: center; font-size: 7px; color: var(--p1-text3);
  }
  .mockup-cal-day.header { font-weight: 700; color: var(--p1-text); font-size: 6px; }
  .mockup-cal-day.selected { background: var(--p1-primary); color: #fff; border-radius: 50%; }
  .mockup-cal-day.available { background: #eff6ff; cursor: pointer; }
  .mockup-video-room {
    background: #0f172a; border-radius: 8px; padding: 14px; display: flex;
    gap: 10px; align-items: center; justify-content: center; min-height: 140px;
  }
  .mockup-video-frame {
    width: 100px; height: 75px; background: #1e293b; border-radius: 6px;
    display: flex; align-items: center; justify-content: center; position: relative;
  }
  .mockup-video-avatar {
    width: 30px; height: 30px; border-radius: 50%; background: #334155;
    display: flex; align-items: center; justify-content: center; font-size: 12px; color: #94a3b8;
  }
  .mockup-video-label {
    position: absolute; bottom: 3px; left: 50%; transform: translateX(-50%);
    font-size: 6px; color: #94a3b8; white-space: nowrap;
  }
  .mockup-video-controls { display: flex; gap: 6px; justify-content: center; margin-top: 8px; }
  .mockup-video-btn {
    width: 24px; height: 24px; border-radius: 50%; display: flex;
    align-items: center; justify-content: center; font-size: 9px;
  }
  .mockup-video-btn-mic { background: #334155; color: #fff; }
  .mockup-video-btn-cam { background: #334155; color: #fff; }
  .mockup-video-btn-end { background: #dc2626; color: #fff; }

  @media print {
    .portal-sidebar, .portal-header, .guide-actions { display: none !important; }
    .portal-grid { display: block !important; }
    .flow-card.guide-step { break-inside: avoid; page-break-inside: avoid; }
  }
  @media (max-width: 640px) {
    .mockup-layout { flex-direction: column; }
    .mockup-sidebar { width: 100%; min-width: 100%; flex-direction: row; flex-wrap: wrap; border-right: none; border-bottom: 1px solid var(--p1-border); }
    .mockup-kpi-row { grid-template-columns: repeat(2, 1fr); }
    .mockup-service-grid { grid-template-columns: 1fr; }
  }
</style>

<div class="portal-shell">
  <div class="portal-header">
    <div class="portal-logo"><%= brandSafe %> <span><%= isAr ? 'بوابة المريض' : 'Patient Portal' %></span></div>
  </div>

  <div class="portal-grid">
    <%- include('partials/patient_sidebar', { activePage: 'dashboard', isAr: isAr, user: (typeof user !== 'undefined' ? user : {}) }) %>

    <main class="portal-content">
      <!-- Hero -->
      <div class="portal-hero">
        <div>
          <h1 class="portal-hero-title"><%= isAr ? 'دليل بوابة المريض' : 'Patient Portal Guide' %></h1>
          <p class="portal-hero-subtitle"><%= isAr ? 'كيف تستخدم منصة تشخيصة للحصول على رأي طبي ثانٍ' : 'How to use the Tashkheesa medical second opinion platform' %></p>
        </div>
      </div>

      <!-- Actions -->
      <div class="guide-actions">
        <button class="btn-primary" onclick="window.print()"><%= isAr ? 'طباعة الدليل' : 'Print Guide' %></button>
        <a href="<%= isAr ? '/help/patient-guide' : '/help/ar/patient-guide' %>"><%= isAr ? 'English' : 'العربية' %></a>
        <a href="/dashboard"><%= isAr ? 'العودة للوحة التحكم' : 'Back to Dashboard' %></a>
      </div>

      <!-- Table of Contents -->
      <div class="flow-card guide-toc">
        <h3><%= isAr ? 'جدول المحتويات' : 'Table of Contents' %></h3>
        <ol>
          <li><a href="#step-1"><%= isAr ? 'تسجيل الدخول' : 'Log In to Your Account' %></a></li>
          <li><a href="#step-2"><%= isAr ? 'لوحة التحكم' : 'Your Dashboard' %></a></li>
          <li><a href="#step-3"><%= isAr ? 'اختيار الخدمة' : 'Choose Your Medical Service' %></a></li>
          <li><a href="#step-4"><%= isAr ? 'رفع الملفات الطبية' : 'Upload Your Medical Files' %></a></li>
          <li><a href="#step-5"><%= isAr ? 'إضافة الملاحظات والإرسال' : 'Add Notes & Submit' %></a></li>
          <li><a href="#step-6"><%= isAr ? 'الدفع' : 'Complete Payment' %></a></li>
          <li><a href="#step-7"><%= isAr ? 'متابعة حالة الحالة' : 'Track Your Case Progress' %></a></li>
          <li><a href="#step-8"><%= isAr ? 'تحميل التقرير' : 'Download Your Specialist Report' %></a></li>
          <li><a href="#step-9"><%= isAr ? 'حجز استشارة فيديو' : 'Book a Video Consultation' %></a></li>
          <li><a href="#step-10"><%= isAr ? 'الانضمام لمكالمة الفيديو' : 'Join Your Video Call' %></a></li>
          <li><a href="#step-11"><%= isAr ? 'الملف الشخصي وتاريخ الدفع' : 'Your Profile & Payment History' %></a></li>
          <li><a href="#step-12"><%= isAr ? 'الحصول على المساعدة' : 'Getting Help' %></a></li>
        </ol>
      </div>

      <!-- Step 1: Login -->
      <div class="flow-card guide-step" id="step-1">
        <div class="guide-step-number"><%= isAr ? 'الخطوة ١ من ١٢' : 'Step 1 of 12' %></div>
        <div class="guide-mockup">
          <div class="mockup-browser-bar">
            <span class="mockup-dot"></span><span class="mockup-dot"></span><span class="mockup-dot"></span>
            <span class="mockup-url">tashkheesa.com/login</span>
          </div>
          <div class="mockup-content">
            <div class="mockup-card">
              <div style="font-weight:700;color:var(--p1-primary);font-size:16px;margin-bottom:4px;">Tashkheesa</div>
              <div style="font-size:10px;color:var(--p1-text3);margin-bottom:14px;"><%= isAr ? 'آراء طبية ثانية' : 'Second opinions, done right' %></div>
              <div class="mockup-input"><%= isAr ? 'البريد الإلكتروني' : 'Email' %></div>
              <div class="mockup-input"><%= isAr ? 'كلمة المرور' : 'Password' %></div>
              <div class="mockup-btn"><%= isAr ? 'تسجيل الدخول' : 'Sign In' %></div>
              <div style="margin-top:10px;font-size:9px;color:var(--p1-text3);"><%= isAr ? 'مريض جديد؟ سجل الآن' : 'New patient? Register here' %></div>
            </div>
          </div>
        </div>
        <h2><%= isAr ? 'تسجيل الدخول' : 'Log In to Your Account' %></h2>
        <p><%= isAr
          ? 'قم بزيارة موقع تشخيصة واضغط على "دخول المريض" في القائمة العلوية. أدخل بريدك الإلكتروني وكلمة المرور. إذا كنت مريضاً جديداً، اضغط "تسجيل" لإنشاء حساب.'
          : 'Visit the Tashkheesa website and click "Patient Login" in the top navigation. Enter your registered email and password. If you\'re a new patient, click "Register" to create your account first.' %></p>
        <div class="guide-tip"><%= isAr ? 'نصيحة: احفظ صفحة تسجيل الدخول كإشارة مرجعية للوصول السريع.' : 'Tip: Save your login page as a bookmark for quick access.' %></div>
      </div>

      <!-- Step 2: Dashboard -->
      <div class="flow-card guide-step" id="step-2">
        <div class="guide-step-number"><%= isAr ? 'الخطوة ٢ من ١٢' : 'Step 2 of 12' %></div>
        <div class="guide-mockup">
          <div class="mockup-browser-bar">
            <span class="mockup-dot"></span><span class="mockup-dot"></span><span class="mockup-dot"></span>
            <span class="mockup-url">tashkheesa.com/dashboard</span>
          </div>
          <div class="mockup-layout">
            <div class="mockup-sidebar">
              <div class="mockup-sidebar-brand">Tashkheesa</div>
              <div class="mockup-nav-item active"><%= isAr ? 'لوحة التحكم' : 'Dashboard' %></div>
              <div class="mockup-nav-item"><%= isAr ? 'حالة جديدة' : 'New Case' %></div>
              <div class="mockup-nav-item"><%= isAr ? 'حالاتي' : 'My Cases' %></div>
              <div class="mockup-nav-item"><%= isAr ? 'المواعيد' : 'Appointments' %></div>
              <div class="mockup-nav-item"><%= isAr ? 'الرسائل' : 'Messages' %></div>
              <div class="mockup-nav-item"><%= isAr ? 'الملف الشخصي' : 'Profile' %></div>
            </div>
            <div class="mockup-main">
              <div class="mockup-heading"><%= isAr ? 'مرحباً بك' : 'Welcome back' %></div>
              <div class="mockup-kpi-row">
                <div class="mockup-kpi">
                  <div class="mockup-kpi-value">3</div>
                  <div class="mockup-kpi-label"><%= isAr ? 'حالات نشطة' : 'Active Cases' %></div>
                </div>
                <div class="mockup-kpi">
                  <div class="mockup-kpi-value">1</div>
                  <div class="mockup-kpi-label"><%= isAr ? 'مواعيد قادمة' : 'Upcoming' %></div>
                </div>
                <div class="mockup-kpi">
                  <div class="mockup-kpi-value">5</div>
                  <div class="mockup-kpi-label"><%= isAr ? 'مكتملة' : 'Completed' %></div>
                </div>
              </div>
              <div class="mockup-table-row">
                <span class="mockup-badge mockup-badge-blue"><%= isAr ? 'قيد المراجعة' : 'In Review' %></span>
                <span style="flex:1"><%= isAr ? 'مراجعة أشعة سينية' : 'X-Ray Review' %></span>
                <span class="mockup-subtext">2d ago</span>
              </div>
              <div class="mockup-table-row">
                <span class="mockup-badge mockup-badge-green"><%= isAr ? 'مكتملة' : 'Completed' %></span>
                <span style="flex:1"><%= isAr ? 'تحليل رنين مغناطيسي' : 'MRI Analysis' %></span>
                <span class="mockup-subtext">5d ago</span>
              </div>
            </div>
          </div>
        </div>
        <h2><%= isAr ? 'لوحة التحكم الخاصة بك' : 'Your Dashboard' %></h2>
        <p><%= isAr
          ? 'بعد تسجيل الدخول، سترى لوحة التحكم مع نظرة عامة على حالاتك النشطة والمواعيد القادمة والرسائل الأخيرة. يتيح لك الشريط الجانبي على اليسار التنقل بين جميع الأقسام.'
          : 'After logging in, you\'ll see your dashboard with an overview of your active cases, upcoming appointments, and recent messages. The sidebar on the left lets you navigate to all sections.' %></p>
      </div>

      <!-- Step 3: Service Selection -->
      <div class="flow-card guide-step" id="step-3">
        <div class="guide-step-number"><%= isAr ? 'الخطوة ٣ من ١٢' : 'Step 3 of 12' %></div>
        <div class="guide-mockup">
          <div class="mockup-browser-bar">
            <span class="mockup-dot"></span><span class="mockup-dot"></span><span class="mockup-dot"></span>
            <span class="mockup-url">tashkheesa.com/patient/orders/new</span>
          </div>
          <div class="mockup-content" style="flex-direction:column;align-items:stretch;padding:16px;">
            <div class="mockup-heading"><%= isAr ? 'اختر الخدمة الطبية' : 'Choose Medical Service' %></div>
            <div class="mockup-service-grid">
              <div class="mockup-service-card">
                <div class="mockup-service-icon" style="background:#eff6ff;">
                  <svg width="14" height="14" fill="none" stroke="#2563eb" stroke-width="2"><rect x="2" y="2" width="10" height="10" rx="2"/><line x1="4" y1="7" x2="10" y2="7"/></svg>
                </div>
                <div class="mockup-service-name"><%= isAr ? 'أشعة سينية' : 'X-Ray Review' %></div>
                <div class="mockup-service-price">EGP 250</div>
              </div>
              <div class="mockup-service-card">
                <div class="mockup-service-icon" style="background:#f0fdf4;">
                  <svg width="14" height="14" fill="none" stroke="#059669" stroke-width="2"><circle cx="7" cy="7" r="5"/><path d="M7 4v6M4 7h6"/></svg>
                </div>
                <div class="mockup-service-name"><%= isAr ? 'رنين مغناطيسي' : 'MRI Analysis' %></div>
                <div class="mockup-service-price">EGP 400</div>
              </div>
              <div class="mockup-service-card">
                <div class="mockup-service-icon" style="background:#fffbeb;">
                  <svg width="14" height="14" fill="none" stroke="#d97706" stroke-width="2"><path d="M3 3h8v8H3z"/><path d="M5 1v4M9 1v4"/></svg>
                </div>
                <div class="mockup-service-name"><%= isAr ? 'أشعة مقطعية' : 'CT Scan Review' %></div>
                <div class="mockup-service-price">EGP 350</div>
              </div>
              <div class="mockup-service-card">
                <div class="mockup-service-icon" style="background:#fdf2f8;">
                  <svg width="14" height="14" fill="none" stroke="#db2777" stroke-width="2"><path d="M2 7h10M7 2v10"/></svg>
                </div>
                <div class="mockup-service-name"><%= isAr ? 'تحاليل دم' : 'Blood Work' %></div>
                <div class="mockup-service-price">EGP 200</div>
