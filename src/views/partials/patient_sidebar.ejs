<%
  var _isAr = (typeof isAr !== 'undefined') ? isAr : false;
  var _activePage = (typeof activePage !== 'undefined') ? activePage : 'dashboard';
  var _user = (typeof user !== 'undefined') ? user : {};
  function pActive(page) { return _activePage === page ? 'active' : ''; }
  function initials(u) {
    if (!u || !u.name) return '??';
    var parts = String(u.name).trim().split(/\s+/);
    if (parts.length >= 2) return (parts[0][0] + parts[1][0]).toUpperCase();
    return parts[0].substring(0,2).toUpperCase();
  }
%>
<aside class="portal-sidebar">
  <div class="sidebar-brand"><%= _isAr ? 'تشخيصة' : 'Tashkheesa' %></div>
  <div class="sidebar-subtitle"><%= _isAr ? 'بوابة المريض' : 'Patient Portal' %></div>

  <ul class="portal-nav">
    <li>
      <a href="/dashboard" class="<%= pActive('dashboard') %>">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="7" height="7"/><rect x="14" y="3" width="7" height="7"/><rect x="14" y="14" width="7" height="7"/><rect x="3" y="14" width="7" height="7"/></svg>
        <%= _isAr ? 'لوحة التحكم' : 'Dashboard' %>
      </a>
    </li>
    <li>
      <a href="/dashboard" class="<%= pActive('cases') %>">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 4h2a2 2 0 012 2v14a2 2 0 01-2 2H6a2 2 0 01-2-2V6a2 2 0 012-2h2"/><rect x="8" y="2" width="8" height="4" rx="1" ry="1"/></svg>
        <%= _isAr ? 'حالاتي' : 'My Cases' %>
      </a>
    </li>
    <li>
      <a href="#" class="nav-disabled">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><line x1="12" y1="8" x2="12" y2="16"/><line x1="8" y1="12" x2="16" y2="12"/></svg>
        <%= _isAr ? 'حالة جديدة (قريباً)' : 'New Case (Soon)' %>
      </a>
    </li>
    <li>
      <a href="/portal/patient/alerts" class="<%= pActive('alerts') %>">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 8A6 6 0 006 8c0 7-3 9-3 9h18s-3-2-3-9"/><path d="M13.73 21a2 2 0 01-3.46 0"/></svg>
        <%= _isAr ? 'التنبيهات' : 'Notifications' %>
      </a>
    </li>
    <li>
      <a href="/portal/patient/appointments" class="<%= pActive('appointments') %>">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>
        <%= _isAr ? 'المواعيد' : 'Appointments' %>
      </a>
    </li>
    <li>
      <a href="/portal/messages" class="<%= pActive('messages') %>">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 11.5a8.38 8.38 0 01-.9 3.8 8.5 8.5 0 01-7.6 4.7 8.38 8.38 0 01-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 01-.9-3.8 8.5 8.5 0 014.7-7.6 8.38 8.38 0 013.8-.9h.5a8.48 8.48 0 018 8v.5z"/></svg>
        <%= _isAr ? 'الرسائل' : 'Messages' %>
      </a>
    </li>
    <li>
      <a href="/portal/patient/prescriptions" class="<%= pActive('prescriptions') %>">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10.5 1.5H8A6.5 6.5 0 008 14.5h.5"/><path d="M13.5 22.5H16A6.5 6.5 0 0016 9.5h-.5"/><line x1="8" y1="8.5" x2="16" y2="15.5"/></svg>
        <%= _isAr ? 'الوصفات' : 'Prescriptions' %>
      </a>
    </li>
    <li>
      <a href="/portal/patient/records" class="<%= pActive('records') %>">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 19a2 2 0 01-2 2H4a2 2 0 01-2-2V5a2 2 0 012-2h5l2 3h9a2 2 0 012 2z"/></svg>
        <%= _isAr ? 'السجلات الطبية' : 'Medical Records' %>
      </a>
    </li>
    <li>
      <a href="/portal/patient/referrals" class="<%= pActive('referrals') %>">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10 13a5 5 0 007.54.54l3-3a5 5 0 00-7.07-7.07l-1.72 1.71"/><path d="M14 11a5 5 0 00-7.54-.54l-3 3a5 5 0 007.07 7.07l1.71-1.71"/></svg>
        <%= _isAr ? 'الإحالات' : 'Referrals' %>
      </a>
    </li>
    <li>
      <a href="/portal/patient/reviews" class="<%= pActive('reviews') %>">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
        <%= _isAr ? 'التقييمات' : 'Reviews' %>
      </a>
    </li>
    <li>
      <a href="/patient/profile" class="<%= pActive('profile') %>">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 00-4-4H8a4 4 0 00-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
        <%= _isAr ? 'الملف الشخصي' : 'Profile' %>
      </a>
    </li>
    <li>
      <a href="/logout">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 21H5a2 2 0 01-2-2V5a2 2 0 012-2h4"/><polyline points="16 17 21 12 16 7"/><line x1="21" y1="12" x2="9" y2="12"/></svg>
        <%= _isAr ? 'تسجيل الخروج' : 'Logout' %>
      </a>
    </li>
  </ul>

  <div class="sidebar-user">
    <div class="sidebar-avatar"><%= initials(_user) %></div>
    <div>
      <div class="sidebar-user-name"><%= _user.name || 'Patient' %></div>
      <div class="sidebar-user-role"><%= _isAr ? 'مريض' : 'Patient' %></div>
    </div>
  </div>

  <div style="padding:8px 0 0 0;">
    <button class="tour-help-btn" onclick="startPortalTour()">
      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M9.09 9a3 3 0 015.83 1c0 2-3 3-3 3"/><line x1="12" y1="17" x2="12.01" y2="17"/></svg>
      <%= _isAr ? 'جولة تعريفية' : 'Take a Tour' %>
    </button>
  </div>
</aside>
