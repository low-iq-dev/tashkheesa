<script>
function handleInterest(event) {
  event.preventDefault();
  const form = event.target;
  const formData = new FormData(form);
  const submitBtn = form.querySelector('button[type="submit"]');
  
  // Disable button to prevent double submission
  submitBtn.disabled = true;
  submitBtn.textContent = 'Submitting...';
  
  // Get form values
  const data = {
    name: formData.get('name'),
    email: formData.get('email'),
    phone: formData.get('phone') || '',
    language: formData.get('language'),
    service_interest: formData.get('service_interest') || 'all',
    case_description: formData.get('case_description') || ''
  };
  
  // Send to backend
  fetch('/api/pre-launch-interest', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json'
    },
    body: JSON.stringify(data)
  })
  .then(response => response.json())
  .then(result => {
    if (result.success) {
      // Show success message
      const successMsg = document.getElementById('successMessage');
      successMsg.classList.add('show');
      
      // Hide form
      form.style.display = 'none';
      
      // Scroll to success message
      successMsg.scrollIntoView({ behavior: 'smooth', block: 'center' });
    } else {
      // Show error
      alert('Error: ' + (result.error || 'Failed to submit. Please try again.'));
      submitBtn.disabled = false;
      submitBtn.textContent = 'Submit Interest';
    }
  })
  .catch(error => {
    console.error('Submission error:', error);
    alert('Failed to submit your interest. Please try again.');
    submitBtn.disabled = false;
    submitBtn.textContent = 'Submit Interest';
  });
  
  return false;
}
</script>

