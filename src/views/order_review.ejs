<%- include('partials/header') %>
  <div class="page-shell">
    <div class="page-inner">
      <header>
        <div class="brand" style="display:flex; align-items:center; justify-content:space-between; gap:16px;">
          <div style="display:flex; align-items:center; gap:12px;">
            <div class="brand-logo">T</div>
            <div>
              <div class="brand-text-main">Tashkheesa</div>
              <div class="brand-text-sub"><%= (typeof isAr !== 'undefined' && isAr) ? 'مراجعة وتأكيد' : 'Review &amp; confirm' %></div>
            </div>
          </div>

          <div class="lang-switch" style="font-weight:600; opacity:.9;">
            <a href="/lang/en?next=/order/review">EN</a> | <a href="/lang/ar?next=/order/review">AR</a>
          </div>
        </div>
      </header>

      <main>
        <div class="page-heading">
          <div>
            <h1><%= (typeof isAr !== 'undefined' && isAr) ? 'مراجعة وتأكيد' : 'Review &amp; confirm' %></h1>
            <p class="subtitle"><%= (typeof isAr !== 'undefined' && isAr) ? 'راجع الملفات، درجة الاستعجال، واللغة قبل الانتقال إلى الدفع.' : 'Double-check the files, urgency, and language before moving toward payment.' %></p>
          </div>
        </div>

        <div class="flow-card">
          <section class="flow-section">
            <h3>Uploaded files</h3>
            <% if (files.length) { %>
              <ul class="flow-summary">
                <% files.forEach(function (file) { %>
                  <li><%= file %></li>
                <% }); %>
              </ul>
            <% } else { %>
              <p class="flow-note">No file details were captured yet.</p>
            <% } %>
          </section>

          <section class="flow-section">
            <h3>Clinical context</h3>
            <div class="flow-grid">
              <div>
                <strong>Reason:</strong>
                <p><%= reason || 'Not provided' %></p>
              </div>
              <div>
                <strong>Urgency flag:</strong>
                <p><%= urgency %></p>
              </div>
              <div>
                <strong>Language:</strong>
                <p><%= language %></p>
              </div>
            </div>
          </section>

          <section class="flow-section">
            <h3>SLA overview</h3>
            <ul class="flow-summary">
              <li>Standard review — 72 hours turnaround</li>
              <li>Priority review — 24 hours turnaround</li>
              <li>Every case receives a written, specialist-reviewed opinion delivered digitally.</li>
            </ul>
          </section>

          <form method="post" action="/order/payment">
            <%- (typeof csrfField === 'function') ? csrfField() : '' %>
            <input type="hidden" name="intake_token" value="<%= sessionToken %>" />
            <input type="hidden" name="file_names" value="<%= files.join('|') %>" />
            <input type="hidden" name="reason" value="<%= reason %>" />
            <input type="hidden" name="urgency" value="<%= urgency %>" />
            <input type="hidden" name="language" value="<%= language %>" />
            <div class="section-cta">
              <button type="submit" class="btn btn-primary"><%= (typeof isAr !== 'undefined' && isAr) ? 'الانتقال إلى الدفع' : 'Proceed to Payment' %></button>
            </div>
          </form>
        </div>
      </main>
    </div>
  </div>
<%- include('partials/footer') %>
