<!DOCTYPE html>
<%
  const _lang = (typeof lang !== 'undefined' && lang) ? lang : ((typeof isAr !== 'undefined' && isAr) ? 'ar' : 'en');
  const _isAr = (typeof isAr !== 'undefined') ? !!isAr : (_lang === 'ar');
%>
<html lang="<%= _lang %>" dir="<%= _isAr ? 'rtl' : 'ltr' %>">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= _isAr ? 'رابط إعادة التعيين غير صالح – تشخيصه' : 'Reset link invalid – Tashkheesa' %></title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body class="auth-shell">
  <div class="page-shell" style="display:flex; justify-content:center; width:100%;">
    <div class="auth-card">
      <div class="auth-header">
        <div class="brand">
          <div class="brand-logo">T</div>
          <div>
            <div class="brand-text-main"><a href="<%= '/login?lang=' + _lang %>" style="color:inherit; text-decoration:none;">Tashkheesa</a></div>
            <div class="brand-text-sub"><%= _isAr ? 'إعادة تعيين كلمة المرور' : 'Reset password' %></div>
          </div>
        </div>
      </div>

      <h2 class="auth-title"><%= _isAr ? 'رابط إعادة التعيين غير صالح أو منتهي' : 'Reset link invalid or expired' %></h2>
      <p class="auth-subtitle"><%= _isAr ? 'يرجى طلب رابط جديد لإعادة التعيين.' : 'Please request a new reset link.' %></p>
      <% const forgotUrl = '/forgot-password?lang=' + _lang; %>
      <a class="btn btn-primary" href="<%= forgotUrl %>"><%= _isAr ? 'طلب رابط جديد' : 'Request new link' %></a>
    </div>
  </div>
</body>
</html>
