<%- include('partials/header', { title: "Reset Link Invalid", layout: "auth", showNav: false, showFooter: false }) %>
<%
  const _lang = (typeof lang !== 'undefined' && lang) ? lang : ((typeof isAr !== 'undefined' && isAr) ? 'ar' : 'en');
  const _isAr = (typeof isAr !== 'undefined') ? !!isAr : (_lang === 'ar');
%>
  <div class="auth-page">
    <div class="auth-card">
      <div class="auth-header">
        <div class="brand-text">
          <strong>Tashkheesa</strong>
          <span><%= _isAr ? 'الرابط غير صالح' : 'Invalid or expired link' %></span>
        </div>
        <h1><%= _isAr ? 'الرابط غير صالح' : 'Invalid or expired link' %></h1>
        <p>
          <%= _isAr ?
            'انتهت صلاحية رابط إعادة تعيين كلمة المرور أو تم استخدامه بالفعل.' :
            'This password reset link is no longer valid or has already been used.'
          %>
        </p>
      </div>

      <% const forgotUrl = '/forgot-password?lang=' + _lang; %>
      <div class="auth-actions">
        <a class="btn btn-primary btn-full" href="<%= forgotUrl %>">
          <%= _isAr ? 'طلب رابط جديد' : 'Request a new reset link' %>
        </a>
      </div>
      <div class="auth-actions">
        <a href="<%= '/login?lang=' + _lang %>">
          <%= _isAr ? 'تسجيل الدخول' : 'Sign in' %>
        </a>
      </div>
    </div>
  </div>

<%- include('partials/footer', { showFooter: false }) %>
