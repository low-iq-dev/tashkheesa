<%- include('partials/header', { title: "Doctors", layout: "portal", showNav: false, portalFrame: true, portalRole: (typeof portalRole !== 'undefined' ? portalRole : 'superadmin'), portalActive: 'doctors' }) %>
      <div class="admin-page">
          <div class="admin-page-header">
            <div class="admin-page-header-left">
              <nav class="admin-breadcrumb">
                <a href="/admin">Dashboard</a>
                <span class="admin-breadcrumb-sep">&rsaquo;</span>
                <span>Doctors</span>
              </nav>
              <h1 class="admin-page-title">Doctors</h1>
              <p class="admin-page-subtitle">Manage doctor accounts</p>
            </div>
            <div class="admin-page-header-right">
              <a class="admin-btn admin-btn-primary" href="/admin/doctors/new">+ New Doctor</a>
            </div>
          </div>

          <%
            // Dashboard data (provided by route). Keep safe fallbacks so the page never breaks.
            var s = (typeof stats !== 'undefined' && stats) ? stats : {};
            var recent = (typeof recentActivity !== 'undefined' && recentActivity) ? recentActivity : [];

            var totalDoctors = Number(s.totalDoctors || s.total_doctors || 0);
            var activeDoctors = Number(s.activeDoctors || s.active_doctors || 0);
            var inactiveDoctors = Math.max(0, totalDoctors - activeDoctors);

            var counts = (s.orderCounts || s.order_counts || {});
            var newCount = Number(counts.NEW || counts.new || 0);
            var acceptedCount = Number(counts.ACCEPTED || counts.accepted || 0);
            var inReviewCount = Number(counts.IN_REVIEW || counts.in_review || 0);
            var completedCount = Number(counts.COMPLETED || counts.completed || 0);
            var breachedCount = Number(counts.BREACHED || counts.breached || counts.BREACHED_SLA || 0);

            var pendingFileRequests = (typeof pendingFileRequests !== 'undefined' && pendingFileRequests) ? pendingFileRequests : [];
            var pendingFileRequestsCount = (typeof pendingFileRequestsCount !== 'undefined') ? pendingFileRequestsCount : ((pendingFileRequests && pendingFileRequests.length) ? pendingFileRequests.length : 0);
          %>

          <div class="admin-kpi-row">
            <div class="admin-kpi">
              <div class="admin-kpi-label">Total doctors</div>
              <div class="admin-kpi-value"><%= totalDoctors %></div>
            </div>
            <div class="admin-kpi">
              <div class="admin-kpi-label">Active</div>
              <div class="admin-kpi-value"><%= activeDoctors %></div>
            </div>
            <div class="admin-kpi">
              <div class="admin-kpi-label">Inactive</div>
              <div class="admin-kpi-value"><%= inactiveDoctors %></div>
            </div>
            <div class="admin-kpi">
              <div class="admin-kpi-label">Pending re-upload</div>
              <div class="admin-kpi-value"><%= Number(pendingFileRequestsCount || 0) %></div>
            </div>
            <div class="admin-kpi">
              <div class="admin-kpi-label">Breached SLA</div>
              <div class="admin-kpi-value"><%= breachedCount %></div>
            </div>
          </div>

          <div style="display:grid; grid-template-columns: 2fr 1fr; gap:12px; margin-bottom:16px;">
              <div class="admin-card">
                <div class="admin-card-body">
                  <div class="card-header" style="margin-bottom:10px;">
                    <div class="card-title">Orders by status</div>
                  </div>
                  <div style="display:flex; flex-wrap:wrap; gap:8px;">
                    <span class="status-pill status-pill--new">New: <%= newCount %></span>
                    <span class="status-pill status-pill--accepted">Accepted: <%= acceptedCount %></span>
                    <span class="status-pill status-pill--in_review">In review: <%= inReviewCount %></span>
                    <span class="status-pill status-pill--completed">Completed: <%= completedCount %></span>
                    <span class="status-pill status-pill--breached">Breached: <%= breachedCount %></span>
                  </div>
                  <div class="muted" style="font-size:12px; margin-top:8px;">Counts reflect current state (not revenue).</div>
                </div>
              </div>

              <div class="admin-card">
                <div class="admin-card-body">
                  <div class="card-header" style="margin-bottom:10px;">
                    <div class="card-title">Latest activity</div>
                  </div>

                  <% if (recent && recent.length) { %>
                    <div style="display:flex; flex-direction:column; gap:10px;">
                      <% recent.slice(0, 6).forEach(function(a){ %>
                        <div style="display:flex; gap:10px; align-items:flex-start;">
                          <div style="width:8px; height:8px; border-radius:999px; background:rgba(95,116,210,.9); margin-top:6px;"></div>
                          <div style="min-width:0;">
                            <div style="font-weight:700; font-size:13px; line-height:1.2; word-break:break-word;"><%= a.event || a.type || a.action || 'activity' %></div>
                            <div class="muted" style="font-size:12px; margin-top:2px;">
                              <%= a.created_at ? formatEventDate(a.created_at) : (a.at ? formatEventDate(a.at) : '') %>
                              <% if (a.order_id || a.orderId) { %>
                                · <a href="/admin/orders/<%= a.order_id || a.orderId %>"><small><%= a.order_id || a.orderId %></small></a>
                              <% } %>
                            </div>
                          </div>
                        </div>
                      <% }); %>
                    </div>
                  <% } else { %>
                    <p class="muted" style="margin:0;">No recent activity yet.</p>
                  <% } %>
                </div>
              </div>
          </div>

          <div class="card" id="pending-file-requests" style="margin-bottom:16px;">
            <div class="card-header">
              <div class="card-title">Pending file re-upload requests</div>
              <div>
                <% if (pendingFileRequestsCount && Number(pendingFileRequestsCount) > 0) { %>
                  <span class="status-pill status-pill--new"><%= pendingFileRequestsCount %></span>
                <% } else { %>
                  <span class="muted" style="font-size:12px;">0</span>
                <% } %>
              </div>
            </div>

            <% if (pendingFileRequests && pendingFileRequests.length) { %>
              <table>
                <thead>
                  <tr>
                    <th>Order</th>
                    <th>Requested</th>
                    <th>Doctor</th>
                    <th>Reason</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  <% pendingFileRequests.forEach(function(r){ %>
                    <tr>
                      <td>
                        <a href="/admin/orders/<%= r.orderId %>"><small><%= r.orderId %></small></a>
                        <% if (r.status) { %>
                          <span class="status-pill status-pill--<%= String(r.status).toLowerCase() %>" style="margin-left:6px;"><%= r.status %></span>
                        <% } %>
                      </td>
                      <td><%= r.requested_at ? formatEventDate(r.requested_at) : '—' %></td>
                      <td><%= r.doctor_name || r.doctor_id || '—' %></td>
                      <td style="max-width:520px;">
                        <%
                          var reason = (r.reason || '').trim();
                          var shortReason = reason.length > 140 ? (reason.slice(0, 140) + '…') : reason;
                        %>
                        <span class="muted" style="font-size:12px; white-space:pre-line;"><%= shortReason || '—' %></span>
                      </td>
                      <td class="align-right">
                        <a class="btn btn-outline btn-small" href="/admin/orders/<%= r.orderId %>">Review</a>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            <% } else { %>
              <p class="muted" style="margin:0;">No pending re-upload requests right now.</p>
            <% } %>
          </div>

          <div class="admin-table-wrap">
            <div class="admin-table-header">
              <h3 class="admin-table-title">All Doctors</h3>
            </div>
            <table class="admin-table">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Specialty</th>
                  <th>Cases</th>
                  <th class="align-right">Earnings</th>
                  <th>Joined</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% (doctors || []).forEach(function(d){ %>
                  <%
                    var joinedDate = '';
                    if (d.joined_at) {
                      var jd = new Date(d.joined_at);
                      joinedDate = String(jd.getDate()).padStart(2, '0') + '/' + String(jd.getMonth() + 1).padStart(2, '0') + '/' + jd.getFullYear();
                    }
                  %>
                  <tr>
                    <td>
                      <div class="cell-bold"><%= d.name || 'Doctor' %></div>
                      <div class="cell-muted"><%= d.email %></div>
                    </td>
                    <td><%= d.specialty_name || '—' %></td>
                    <td>
                      <span class="cell-bold"><%= d.cases_completed || 0 %></span>
                      <span class="cell-muted">/ <%= d.total_cases || 0 %></span>
                    </td>
                    <td class="align-right">
                      <% if (d.total_earnings && Number(d.total_earnings) > 0) { %>
                        <span class="cell-bold"><%= Number(d.total_earnings).toLocaleString() %></span>
                      <% } else { %>
                        <span class="cell-muted">—</span>
                      <% } %>
                    </td>
                    <td><span class="cell-muted"><%= joinedDate || '—' %></span></td>
                    <td>
                      <% if (d.is_active) { %>
                        <span class="status-pill status-pill--completed">Active</span>
                      <% } else { %>
                        <span class="status-pill status-pill--breached">Inactive</span>
                      <% } %>
                    </td>
                    <td>
                      <div class="admin-page-header-right">
                        <a class="btn btn-outline btn-small" href="/admin/doctors/<%= d.id %>/edit">Edit</a>
                        <form method="post" action="/admin/doctors/<%= d.id %>/toggle-active" style="margin:0;">
                          <%- (typeof csrfField === 'function') ? csrfField() : '' %>
                          <button class="btn btn-outline btn-small" type="submit"><%= d.is_active ? 'Deactivate' : 'Activate' %></button>
                        </form>
                      </div>
                    </td>
                  </tr>
                <% }); %>
                <% if (!doctors || !doctors.length) { %>
                  <tr><td colspan="7" class="empty">No doctors yet.</td></tr>
                <% } %>
              </tbody>
            </table>
          </div>
      </div>

<%- include('partials/footer', { showFooter: false, portalFrame: true }) %>
