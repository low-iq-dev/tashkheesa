<%
  const isAr = String(lang).toLowerCase() === 'ar';
  function tt(en, ar) { return isAr ? ar : en; }
  const pageDir = isAr ? 'rtl' : 'ltr';
  const cspNonce = (typeof locals !== 'undefined' && locals && (locals.cspNonce || locals.csp_nonce || locals.nonce))
    ? String(locals.cspNonce || locals.csp_nonce || locals.nonce) : '';
%>
<!DOCTYPE html>
<html lang="<%= lang %>" dir="<%= pageDir %>">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= tt('Video Call', 'مكالمة فيديو') %> — Tashkheesa</title>
  <link rel="stylesheet" href="/styles.css" />
  <link rel="stylesheet" href="/css/portal-variables.css" />
  <link rel="stylesheet" href="/css/portal-components.css" />
  <link rel="stylesheet" href="/css/portal-global.css" />
  <link rel="stylesheet" href="/css/portal-components.css" />
  <link rel="stylesheet" href="/css/portal-global.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
  <link rel="icon" href="/favicon.ico" />
  <style>
    /* Video Call Room - Uses portal design tokens */
    * { margin: 0; padding: 0; box-sizing: border-box; }

    .vc-room {
      position: fixed; inset: 0;
      background: #0a0a0f;
      display: flex; flex-direction: column;
      font-family: var(--font-primary);
      color: #fff;
      z-index: 9999;
    }

    /* Top bar */
    .vc-topbar {
      display: flex; align-items: center; justify-content: space-between;
      padding: 14px 24px;
      background: var(--deep-blue);
      z-index: 10;
      box-shadow: var(--shadow-sticky);
    }
    .vc-topbar-info { display: flex; align-items: center; gap: 14px; }
    .vc-topbar-avatar {
      width: 36px; height: 36px; border-radius: 50%;
      background: linear-gradient(135deg, var(--medical-blue), var(--accent-teal));
      display: flex; align-items: center; justify-content: center;
      font-weight: 700; font-size: 14px;
    }
    .vc-topbar-info h3 { font-size: 0.95rem; font-weight: 600; margin: 0; }
    .vc-topbar-info span { font-size: 0.8rem; opacity: 0.7; }
    .vc-topbar-right { display: flex; align-items: center; gap: 12px; }

    .vc-timer {
      font-variant-numeric: tabular-nums;
      font-size: 1rem; font-weight: 700;
      background: rgba(255,255,255,0.1);
      padding: 6px 16px; border-radius: var(--radius-full);
    }

    .vc-topbar-btn {
      background: rgba(255,255,255,0.1);
      border: none; color: white; cursor: pointer;
      padding: 8px 14px; border-radius: var(--radius-md);
      font-size: 13px; font-weight: 500;
      transition: all var(--transition-fast);
      font-family: var(--font-primary);
    }
    .vc-topbar-btn:hover { background: rgba(255,255,255,0.2); }

    /* Video area */
    .vc-videos {
      flex: 1; position: relative;
      display: flex; align-items: center; justify-content: center;
      overflow: hidden;
    }

    #remote-video {
      width: 100%; height: 100%;
      display: flex; align-items: center; justify-content: center;
    }
    #remote-video video {
      width: 100%; height: 100%;
      object-fit: cover;
    }
    #remote-video .vc-placeholder {
      text-align: center; color: rgba(255,255,255,0.5);
    }
    #remote-video .vc-placeholder p { font-size: 1.1rem; margin-top: 12px; }

    #local-video {
      position: absolute; bottom: 100px; right: 24px;
      width: 200px; height: 150px;
      border-radius: var(--radius-lg); overflow: hidden;
      border: 2px solid rgba(255,255,255,0.2);
      box-shadow: var(--shadow-lg);
      z-index: 5;
      background: #1a1a2e;
      transition: all var(--transition-standard);
    }
    #local-video:hover { border-color: var(--accent-teal); }
    [dir="rtl"] #local-video { right: auto; left: 24px; }
    #local-video video {
      width: 100%; height: 100%;
      object-fit: cover;
      transform: scaleX(-1);
    }

    /* Status overlay */
    .vc-status-overlay {
      position: absolute; inset: 0;
      display: flex; align-items: center; justify-content: center;
      background: rgba(0,0,0,0.7);
      backdrop-filter: blur(8px);
      z-index: 8;
      transition: opacity var(--transition-standard);
    }
    .vc-status-overlay.hidden { opacity: 0; pointer-events: none; }
    .vc-status-text { text-align: center; color: #fff; }
    .vc-status-text .spinner { margin: 0 auto 16px; }
    .vc-status-text p { font-size: 1rem; }

    /* Controls bar */
    .vc-controls {
      display: flex; align-items: center; justify-content: center; gap: 16px;
      padding: 18px 24px;
      background: rgba(0,0,0,0.8);
      backdrop-filter: blur(12px);
      z-index: 10;
    }
    .vc-btn {
      width: 52px; height: 52px;
      border-radius: 50%;
      border: none; cursor: pointer;
      display: flex; align-items: center; justify-content: center;
      background: rgba(255,255,255,0.12);
      color: #fff;
      font-size: 1.2rem;
      transition: all var(--transition-fast);
    }
    .vc-btn:hover { background: rgba(255,255,255,0.22); transform: scale(1.08); }
    .vc-btn:active { transform: scale(0.95); }
    .vc-btn.active { background: var(--medical-blue); }
    .vc-btn.muted { background: rgba(239,68,68,0.8); }
    .vc-btn-end {
      background: var(--danger); width: 68px; height: 52px; border-radius: 28px;
    }
    .vc-btn-end:hover { background: #b91c1c; }
    .vc-btn svg { width: 22px; height: 22px; fill: none; stroke: currentColor; stroke-width: 2; stroke-linecap: round; stroke-linejoin: round; }

    /* SLA Timer */
    .vc-sla-timer {
      position: absolute;
      top: 16px;
      right: 16px;
      background: var(--accent-teal);
      color: var(--white);
      padding: 8px 16px;
      border-radius: var(--radius-md);
      font-size: 13px;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 8px;
      z-index: 15;
      box-shadow: var(--shadow-md);
    }
    .vc-sla-timer.warning { background: var(--warning); }
    .vc-sla-timer.critical { background: var(--danger); animation: pulse-subtle 2s ease-in-out infinite; }
    @keyframes pulse-subtle {
      0%, 100% { box-shadow: 0 0 0 0 rgba(239, 68, 68, 0.4); }
      50% { box-shadow: 0 0 0 8px rgba(239, 68, 68, 0); }
    }

    /* Info panel */
    .vc-info-panel {
      position: absolute;
      top: 0; right: 0;
      width: 340px; height: 100%;
      background: rgba(0, 0, 0, 0.88);
      backdrop-filter: blur(16px);
      padding: 24px;
      overflow-y: auto;
      z-index: 6;
      border-left: 1px solid rgba(255, 255, 255, 0.1);
      transform: translateX(100%);
      transition: transform var(--transition-standard);
    }
    .vc-info-panel.open { transform: translateX(0); }
    .vc-info-panel h4 { font-size: 14px; font-weight: 600; color: rgba(255,255,255,0.6); text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 12px; }
    .vc-info-panel p { font-size: 14px; color: rgba(255,255,255,0.8); margin-bottom: 8px; }

    /* Error overlay */
    .vc-error {
      position: absolute; inset: 0;
      display: flex; align-items: center; justify-content: center;
      background: #0a0a0f; z-index: 20;
    }
    .vc-error-card {
      text-align: center; max-width: 400px; padding: 40px;
      background: rgba(255,255,255,0.05); border-radius: var(--radius-xl);
      border: 1px solid rgba(255,255,255,0.1);
    }
    .vc-error-card h2 { color: var(--danger); margin-bottom: 12px; font-size: 20px; }
    .vc-error-card p { color: rgba(255,255,255,0.7); margin-bottom: 24px; }

    /* Mobile responsive */
    @media (max-width: 600px) {
      #local-video { width: 120px; height: 90px; bottom: 90px; right: 12px; border-radius: var(--radius-md); }
      [dir="rtl"] #local-video { right: auto; left: 12px; }
      .vc-controls { gap: 10px; padding: 14px 16px; }
      .vc-btn { width: 48px; height: 48px; }
      .vc-btn-end { width: 60px; height: 48px; }
      .vc-topbar { padding: 10px 16px; }
      .vc-info-panel { width: 100%; }
    }
  </style>
</head>
<body style="margin:0; padding:0; overflow:hidden; background:#0a0a0f;">

<div class="vc-room" id="vc-room">
  <!-- Top bar -->
  <div class="vc-topbar">
    <div class="vc-topbar-info">
      <div class="vc-topbar-avatar"><%= (otherName || 'P').charAt(0).toUpperCase() %></div>
      <div>
        <h3><%= otherName || tt('Participant', 'المشارك') %></h3>
        <span><%= tt('Video Consultation', 'استشارة فيديو') %></span>
      </div>
    </div>
    <div class="vc-topbar-right">
      <div class="vc-timer" id="vc-timer">00:00</div>
      <button class="vc-topbar-btn" id="btn-toggle-info" title="<%= tt('Case Info', 'معلومات الحالة') %>">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><line x1="12" y1="16" x2="12" y2="12"/><line x1="12" y1="8" x2="12.01" y2="8"/></svg>
        <%= tt('Info', 'معلومات') %>
      </button>
    </div>
  </div>

  <!-- Video area -->
  <div class="vc-videos">
    <!-- Status overlay (shown while connecting) -->
    <div class="vc-status-overlay" id="vc-status">
      <div class="vc-status-text">
        <div class="spinner"></div>
        <p id="vc-status-msg"><%= tt('Connecting...', 'جارٍ الاتصال...') %></p>
      </div>
    </div>

    <!-- Remote participant video -->
    <div id="remote-video">
      <div class="vc-placeholder" id="vc-waiting">
        <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="rgba(255,255,255,0.3)" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/>
        </svg>
        <p><%= tt('Waiting for other participant...', 'في انتظار المشارك الآخر...') %></p>
      </div>
    </div>

    <!-- Local video (picture-in-picture) -->
    <div id="local-video"></div>

    <!-- Info panel (slide-in) -->
    <div class="vc-info-panel" id="vc-info-panel">
      <h4><%= tt('Consultation Details', 'تفاصيل الاستشارة') %></h4>
      <p><strong><%= tt('Participant:', 'المشارك:') %></strong> <%= otherName || tt('Participant', 'المشارك') %></p>
      <p><strong><%= tt('Type:', 'النوع:') %></strong> <%= tt('Video Consultation', 'استشارة فيديو') %></p>
    </div>

    <!-- Error overlay (hidden by default) -->
    <div class="vc-error" id="vc-error" style="display:none;">
      <div class="vc-error-card">
        <h2><%= tt('Connection Error', 'خطأ في الاتصال') %></h2>
        <p id="vc-error-msg"><%= tt('Unable to connect to video call.', 'تعذر الاتصال بمكالمة الفيديو.') %></p>
        <button class="p-btn p-btn-primary" onclick="window.location.reload()"><%= tt('Retry', 'إعادة المحاولة') %></button>
        <a href="/portal/video/appointment/<%= appointment.id %>" class="p-btn p-btn-ghost" style="margin-top:8px;color:rgba(255,255,255,0.7);">
          <%= tt('Back', 'رجوع') %>
        </a>
      </div>
    </div>
  </div>

  <!-- Controls -->
  <div class="vc-controls">
    <!-- Mute audio -->
    <button class="vc-btn" id="btn-mute-audio" title="<%= tt('Mute/Unmute', 'كتم/إلغاء كتم') %>">
      <svg id="icon-mic-on" viewBox="0 0 24 24"><path d="M12 1a3 3 0 0 0-3 3v8a3 3 0 0 0 6 0V4a3 3 0 0 0-3-3z"/><path d="M19 10v2a7 7 0 0 1-14 0v-2"/><line x1="12" y1="19" x2="12" y2="23"/><line x1="8" y1="23" x2="16" y2="23"/></svg>
      <svg id="icon-mic-off" style="display:none;" viewBox="0 0 24 24"><line x1="1" y1="1" x2="23" y2="23"/><path d="M9 9v3a3 3 0 0 0 5.12 2.12M15 9.34V4a3 3 0 0 0-5.94-.6"/><path d="M17 16.95A7 7 0 0 1 5 12v-2m14 0v2c0 .76-.13 1.5-.36 2.18"/><line x1="12" y1="19" x2="12" y2="23"/><line x1="8" y1="23" x2="16" y2="23"/></svg>
    </button>

    <!-- Mute video -->
    <button class="vc-btn" id="btn-mute-video" title="<%= tt('Camera On/Off', 'تشغيل/إيقاف الكاميرا') %>">
      <svg id="icon-video-on" viewBox="0 0 24 24"><polygon points="23 7 16 12 23 17 23 7"/><rect x="1" y="5" width="15" height="14" rx="2" ry="2"/></svg>
      <svg id="icon-video-off" style="display:none;" viewBox="0 0 24 24"><path d="M16 16v1a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V7a2 2 0 0 1 2-2h2m5.66 0H14a2 2 0 0 1 2 2v3.34l1 1L23 7v10"/><line x1="1" y1="1" x2="23" y2="23"/></svg>
    </button>

    <!-- Screen share -->
    <button class="vc-btn" id="btn-screen-share" title="<%= tt('Share Screen', 'مشاركة الشاشة') %>">
      <svg viewBox="0 0 24 24"><rect x="2" y="3" width="20" height="14" rx="2" ry="2"/><line x1="8" y1="21" x2="16" y2="21"/><line x1="12" y1="17" x2="12" y2="21"/></svg>
    </button>

    <!-- End call -->
    <button class="vc-btn vc-btn-end" id="btn-end-call" title="<%= tt('End Call', 'إنهاء المكالمة') %>">
      <svg viewBox="0 0 24 24"><path d="M10.68 13.31a16 16 0 0 0 3.41 2.6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7 2 2 0 0 1 1.72 2v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l-3.41-2.6z" transform="rotate(135 12 12)"/></svg>
    </button>
  </div>
</div>

<!-- Twilio Video SDK -->
<script src="https://media.twiliocdn.com/sdk/js/video/releases/2.28.1/twilio-video.min.js"></script>
<!-- Video consultation client logic -->
<script src="/js/video-consultation.js"></script>
<script<% if (cspNonce) { %> nonce="<%= cspNonce %>"<% } %>>
  document.addEventListener('DOMContentLoaded', function() {
    // Info panel toggle
    var infoBtn = document.getElementById('btn-toggle-info');
    var infoPanel = document.getElementById('vc-info-panel');
    if (infoBtn && infoPanel) {
      infoBtn.addEventListener('click', function() {
        infoPanel.classList.toggle('open');
      });
    }

    if (typeof TashkheesaVideoCall !== 'undefined') {
      TashkheesaVideoCall.init({
        appointmentId: '<%= appointment.id %>',
        tokenEndpoint: '/api/video/token/<%= appointment.id %>',
        endEndpoint: '/api/video/end/<%= appointment.id %>',
        redirectAfterEnd: '/portal/video/ended/<%= appointment.id %>',
        isDoctor: <%= isDoctor ? 'true' : 'false' %>,
        participantName: '<%= (participantName || '').replace(/'/g, "\\'") %>',
        otherName: '<%= (otherName || '').replace(/'/g, "\\'") %>',
        lang: '<%= lang %>'
      });
    }
  });
</script>

</body>
</html>
