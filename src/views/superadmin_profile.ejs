<%- include('partials/header', { title: title || 'My profile', layout: 'portal', showNav: true, showFooter: false, portalFrame: true, portalRole: 'superadmin', portalActive: 'profile', portalNext: nextPath || '/superadmin/profile' }) %>
<%
  const profileData = (typeof profile !== 'undefined' && profile) ? profile : {};
  const labelsSafe = (typeof labels !== 'undefined' && labels) ? labels : {};
  const pageIsAr = (typeof isAr !== 'undefined') ? isAr : (typeof lang !== 'undefined' && lang === 'ar');
%>

<div class="admin-page">
  <div class="admin-page-header">
    <div class="admin-page-header-left">
      <nav class="admin-breadcrumb">
        <a href="/superadmin">Dashboard</a>
        <span class="admin-breadcrumb-sep">&rsaquo;</span>
        <span><%= pageIsAr ? 'الملف الشخصي' : 'Profile' %></span>
      </nav>
      <h1 class="admin-page-title"><%= title || (pageIsAr ? 'ملفي الشخصي' : 'My profile') %></h1>
      <p class="admin-page-subtitle"><%= pageIsAr ? 'بيانات حساب المشرف.' : 'Your superadmin account details.' %></p>
    </div>
    <div class="admin-page-header-right">
      <a class="admin-btn admin-btn-outline" href="/superadmin"><%= pageIsAr ? 'العودة إلى لوحة التحكم' : 'Back to dashboard' %></a>
    </div>
  </div>

  <section class="admin-card">
    <div class="admin-card-body">
      <div class="admin-grid-2" style="gap: 12px;">
        <div><strong><%= labelsSafe.name || (pageIsAr ? 'الاسم' : 'Name') %>:</strong> <%= profileData.name || '—' %></div>
        <div><strong><%= labelsSafe.email || (pageIsAr ? 'البريد الإلكتروني' : 'Email') %>:</strong> <%= profileData.email || '—' %></div>
        <div><strong><%= labelsSafe.role || (pageIsAr ? 'الدور' : 'Role') %>:</strong> <%= profileData.role || 'superadmin' %></div>
        <div><strong><%= labelsSafe.specialty || (pageIsAr ? 'التخصص' : 'Specialty') %>:</strong> <%= profileData.specialty || '—' %></div>
      </div>
      <hr style="margin:16px 0;" />
      <p class="muted" style="margin:0;"><%= labelsSafe.note || '' %></p>
    </div>
  </section>
</div>

<%- include('partials/footer', { showFooter: false, portalFrame: true }) %>
