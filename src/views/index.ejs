<main class="marketing">

  <!-- Hero -->
  <section id="home" class="hero-section section">
    <div class="hero-bg"></div>
    <div class="container hero-grid">
      <div class="hero-content">
        <h1>Get clarity on your diagnosis and treatment plan.</h1>
