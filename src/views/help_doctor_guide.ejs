<%
  const isAr = (typeof lang !== 'undefined' && lang === 'ar');
  const dir = isAr ? 'rtl' : 'ltr';
%>
<!DOCTYPE html>
<html lang="<%= isAr ? 'ar' : 'en' %>" dir="<%= dir %>">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= isAr ? 'دليل بوابة الطبيب — تشخيصة' : 'Doctor Portal Guide — Tashkheesa' %></title>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  <style>
    *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
    body {
      font-family: 'DM Sans', 'Inter', system-ui, sans-serif;
      background: #f8fafc; color: #1e293b; line-height: 1.6;
    }
    .guide-container { max-width: 900px; margin: 0 auto; padding: 32px 24px; }
    .guide-cover {
      background: linear-gradient(135deg, #065f46 0%, #059669 50%, #34d399 100%);
      color: #fff; border-radius: 16px; padding: 60px 40px; text-align: center; margin-bottom: 40px;
    }
    .guide-cover-logo {
      width: 72px; height: 72px; background: rgba(255,255,255,.15);
      border-radius: 18px; display: flex; align-items: center; justify-content: center;
      margin: 0 auto 20px; font-size: 32px; font-weight: 800; color: #fff;
    }
    .guide-cover h1 { font-size: 32px; font-weight: 800; margin-bottom: 8px; }
    .guide-cover p { font-size: 16px; opacity: .85; max-width: 500px; margin: 0 auto; }
    .guide-actions {
      display: flex; gap: 12px; justify-content: center; flex-wrap: wrap; margin-bottom: 40px;
    }
    .guide-actions button, .guide-actions a {
      padding: 10px 24px; border-radius: 8px; font-size: 14px; font-weight: 600;
      cursor: pointer; border: 1px solid #e2e8f0; background: #fff; color: #334155;
      text-decoration: none; display: inline-flex; align-items: center; gap: 6px; font-family: inherit;
    }
    .guide-actions .btn-primary { background: #059669; color: #fff; border-color: #059669; }
    .guide-actions .btn-primary:hover { background: #047857; }
    .guide-step {
      background: #fff; border-radius: 14px; padding: 32px;
      margin-bottom: 24px; border: 1px solid #e2e8f0;
    }
    .guide-step-number {
      display: inline-flex; align-items: center; gap: 6px;
      font-size: 11px; font-weight: 700; text-transform: uppercase; letter-spacing: .5px;
      color: #059669; background: #ecfdf5; padding: 4px 12px; border-radius: 6px; margin-bottom: 16px;
    }
    .guide-step h2 { font-size: 20px; font-weight: 700; margin-bottom: 8px; color: #0f172a; }
    .guide-step p { font-size: 14px; color: #475569; margin-bottom: 12px; }
    .guide-tip {
      background: #ecfdf5; border: 1px solid #a7f3d0; border-radius: 8px;
      padding: 10px 14px; font-size: 13px; color: #065f46;
    }
    .guide-toc { margin-bottom: 40px; }
    .guide-toc h2 { font-size: 18px; font-weight: 700; margin-bottom: 12px; }
    .guide-toc ol { padding-<%= isAr ? 'right' : 'left' %>: 20px; }
    .guide-toc li { font-size: 14px; color: #475569; margin-bottom: 6px; }
    .guide-toc a { color: #059669; text-decoration: none; }
    .guide-toc a:hover { text-decoration: underline; }

    /* CSS Mockup Illustrations */
    .guide-mockup {
      background: #f1f5f9; border-radius: 12px; overflow: hidden;
      border: 1px solid #e2e8f0; margin-bottom: 20px; font-family: 'DM Sans', sans-serif;
    }
    .mockup-browser-bar {
      background: #f8fafc; border-bottom: 1px solid #e2e8f0;
      padding: 8px 12px; display: flex; align-items: center; gap: 6px;
    }
    .mockup-dot { width: 8px; height: 8px; border-radius: 50%; background: #d1d5db; }
    .mockup-dot:first-child { background: #fca5a5; }
    .mockup-dot:nth-child(2) { background: #fcd34d; }
    .mockup-dot:nth-child(3) { background: #86efac; }
    .mockup-url {
      margin-left: 12px; font-size: 11px; color: #94a3b8;
      background: #fff; padding: 3px 12px; border-radius: 4px; border: 1px solid #e2e8f0;
    }
    .mockup-content {
      padding: 24px; min-height: 240px; display: flex;
      align-items: center; justify-content: center;
    }
    .mockup-layout {
      display: flex; min-height: 260px; border-radius: 10px;
      overflow: hidden; border: 1px solid #e2e8f0; background: #f1f5f9; width: 100%;
    }
    .mockup-sidebar {
      width: 140px; min-width: 140px; background: #fff; border-right: 1px solid #e2e8f0;
      padding: 14px 10px; display: flex; flex-direction: column; gap: 4px;
    }
    .mockup-sidebar-brand { font-size: 13px; font-weight: 700; color: #059669; margin-bottom: 10px; padding: 0 6px; }
    .mockup-nav-item { padding: 5px 10px; border-radius: 6px; font-size: 10px; color: #64748b; }
    .mockup-nav-item.active { background: #ecfdf5; color: #059669; font-weight: 600; }
    .mockup-main { flex: 1; padding: 14px; overflow: hidden; }
    .mockup-heading { font-size: 13px; font-weight: 700; color: #0f172a; margin-bottom: 10px; }
    .mockup-subtext { font-size: 10px; color: #94a3b8; }
    .mockup-kpi-row { display: grid; grid-template-columns: repeat(3, 1fr); gap: 8px; margin-bottom: 12px; }
    .mockup-kpi {
      background: #fff; border: 1px solid #e2e8f0; border-radius: 8px; padding: 8px 10px;
      border-left: 3px solid #059669;
    }
    .mockup-kpi-value { font-size: 15px; font-weight: 700; color: #0f172a; }
    .mockup-kpi-label { font-size: 8px; color: #94a3b8; }
    .mockup-table-row {
      display: flex; align-items: center; gap: 8px; background: #fff;
      border: 1px solid #e2e8f0; border-radius: 6px; padding: 6px 10px;
      margin-bottom: 4px; font-size: 9px; color: #475569;
    }
    .mockup-badge { font-size: 8px; padding: 2px 6px; border-radius: 4px; font-weight: 600; }
    .mockup-badge-green { background: #ecfdf5; color: #059669; }
    .mockup-badge-amber { background: #fffbeb; color: #d97706; }
    .mockup-badge-red { background: #fef2f2; color: #dc2626; }
    .mockup-badge-blue { background: #eff6ff; color: #2563eb; }
    .mockup-btn {
      background: #059669; color: #fff; padding: 8px 16px; border-radius: 6px;
      font-size: 12px; font-weight: 600; text-align: center;
    }
    .mockup-btn-outline {
      background: #fff; color: #059669; border: 1px solid #059669;
      padding: 6px 14px; border-radius: 6px; font-size: 11px; font-weight: 600; text-align: center;
    }
    .mockup-card {
      background: #fff; padding: 24px; border-radius: 12px;
      box-shadow: 0 4px 12px rgba(0,0,0,.06); text-align: center;
    }
    .mockup-input {
      background: #f8fafc; border: 1px solid #e2e8f0; border-radius: 6px;
      padding: 8px 12px; font-size: 11px; color: #94a3b8; margin-bottom: 8px; text-align: left;
    }
    .mockup-textarea {
      background: #fff; border: 1px solid #e2e8f0; border-radius: 8px;
      padding: 10px; font-size: 10px; color: #94a3b8; min-height: 60px;
      margin-bottom: 8px; text-align: left; width: 100%;
    }
    .mockup-form-label { font-size: 10px; font-weight: 600; color: #334155; margin-bottom: 4px; }
    .mockup-form-group { margin-bottom: 10px; text-align: left; }
    .mockup-divider { height: 1px; background: #e2e8f0; margin: 10px 0; }
    .mockup-image-viewer {
      background: #0f172a; border-radius: 8px; padding: 12px;
      display: flex; gap: 8px; min-height: 180px;
    }
    .mockup-image-thumb {
      width: 60px; display: flex; flex-direction: column; gap: 4px;
    }
    .mockup-thumb {
      width: 56px; height: 42px; background: #1e293b; border-radius: 4px;
      border: 1px solid #334155;
    }
    .mockup-thumb.active { border-color: #059669; border-width: 2px; }
    .mockup-image-main {
      flex: 1; background: #1e293b; border-radius: 6px;
      display: flex; align-items: center; justify-content: center;
    }
    .mockup-annotation-bar {
      display: flex; gap: 6px; padding: 8px; background: #fff;
      border: 1px solid #e2e8f0; border-radius: 8px; justify-content: center;
    }
    .mockup-tool {
      width: 28px; height: 28px; border-radius: 6px; background: #f1f5f9;
      display: flex; align-items: center; justify-content: center;
    }
    .mockup-tool.active { background: #ecfdf5; border: 1px solid #059669; }
    .mockup-chat-bubble {
      padding: 8px 12px; border-radius: 10px; font-size: 9px; max-width: 70%;
      margin-bottom: 6px;
    }
    .mockup-chat-sent { background: #ecfdf5; color: #065f46; margin-left: auto; border-bottom-right-radius: 2px; }
    .mockup-chat-received { background: #f1f5f9; color: #334155; border-bottom-left-radius: 2px; }
    .mockup-video-room {
      background: #0f172a; border-radius: 10px; padding: 16px; display: flex;
      gap: 12px; align-items: center; justify-content: center; min-height: 140px;
    }
    .mockup-video-frame {
      width: 110px; height: 80px; background: #1e293b; border-radius: 8px;
      display: flex; align-items: center; justify-content: center; position: relative;
    }
    .mockup-video-avatar {
      width: 32px; height: 32px; border-radius: 50%; background: #334155;
      display: flex; align-items: center; justify-content: center; font-size: 12px; color: #94a3b8;
    }
    .mockup-video-label {
      position: absolute; bottom: 4px; left: 50%; transform: translateX(-50%);
      font-size: 7px; color: #94a3b8; white-space: nowrap;
    }
    .mockup-chart-bar {
      display: flex; align-items: flex-end; gap: 6px; height: 80px; padding-top: 8px;
    }
    .mockup-bar {
      flex: 1; border-radius: 3px 3px 0 0; min-width: 20px;
    }

    @media print {
      body { background: #fff; }
      .guide-container { max-width: 100%; padding: 0; }
      .guide-actions { display: none !important; }
      .guide-step { break-inside: avoid; page-break-inside: avoid; border: 1px solid #ddd; }
      .guide-cover { break-after: page; }
    }
    @media (max-width: 640px) {
      .guide-cover { padding: 40px 24px; }
      .guide-cover h1 { font-size: 24px; }
      .guide-step { padding: 20px; }
      .mockup-layout { flex-direction: column; }
      .mockup-sidebar { width: 100%; min-width: 100%; flex-direction: row; flex-wrap: wrap; border-right: none; border-bottom: 1px solid #e2e8f0; }
    }
  </style>
</head>
<body>
  <div class="guide-container">
    <div class="guide-cover">
      <div class="guide-cover-logo">T</div>
      <h1><%= isAr ? 'دليل بوابة الطبيب' : 'Doctor Portal Guide' %></h1>
      <p><%= isAr ? 'كيف تراجع الحالات وتقدم تقاريرك الطبية على منصة تشخيصة' : 'How to review cases and submit medical reports on Tashkheesa' %></p>
    </div>

    <div class="guide-actions">
      <button class="btn-primary" onclick="window.print()"><%= isAr ? 'تحميل PDF' : 'Download as PDF' %></button>
      <a href="<%= isAr ? '/help/doctor-guide' : '/help/ar/doctor-guide' %>"><%= isAr ? 'English' : 'العربية' %></a>
      <a href="/portal/doctor"><%= isAr ? 'العودة للوحة التحكم' : 'Back to Dashboard' %></a>
    </div>

    <div class="guide-toc">
      <h2><%= isAr ? 'جدول المحتويات' : 'Table of Contents' %></h2>
      <ol>
        <li><a href="#step-1"><%= isAr ? 'لوحة تحكم الطبيب' : 'Your Doctor Dashboard' %></a></li>
        <li><a href="#step-2"><%= isAr ? 'قائمة الحالات' : 'Your Case Queue' %></a></li>
        <li><a href="#step-3"><%= isAr ? 'مراجعة ملفات المريض' : 'Reviewing Patient Files' %></a></li>
        <li><a href="#step-4"><%= isAr ? 'أدوات التعليق على الصور' : 'Image Annotation Tools' %></a></li>
        <li><a href="#step-5"><%= isAr ? 'كتابة التقرير الطبي' : 'Writing Your Medical Report' %></a></li>
        <li><a href="#step-6"><%= isAr ? 'طلب ملفات إضافية' : 'Requesting Additional Files' %></a></li>
        <li><a href="#step-7"><%= isAr ? 'مواعيد الفيديو' : 'Video Appointments' %></a></li>
        <li><a href="#step-8"><%= isAr ? 'رسائل المرضى' : 'Patient Messages' %></a></li>
        <li><a href="#step-9"><%= isAr ? 'الوصفات الطبية' : 'Prescriptions' %></a></li>
        <li><a href="#step-10"><%= isAr ? 'التحليلات والأداء' : 'Analytics & Performance' %></a></li>
      </ol>
    </div>

    <!-- Step 1: Doctor Dashboard -->
    <div class="guide-step" id="step-1">
      <div class="guide-step-number"><%= isAr ? 'الخطوة ١ من ١٠' : 'Step 1 of 10' %></div>
      <div class="guide-mockup">
        <div class="mockup-browser-bar">
          <span class="mockup-dot"></span><span class="mockup-dot"></span><span class="mockup-dot"></span>
          <span class="mockup-url">tashkheesa.com/portal/doctor</span>
        </div>
        <div class="mockup-layout">
          <div class="mockup-sidebar">
            <div class="mockup-sidebar-brand">Tashkheesa</div>
            <div class="mockup-nav-item active"><%= isAr ? 'لوحة التحكم' : 'Dashboard' %></div>
            <div class="mockup-nav-item"><%= isAr ? 'قائمة الحالات' : 'Case Queue' %></div>
            <div class="mockup-nav-item"><%= isAr ? 'المواعيد' : 'Appointments' %></div>
            <div class="mockup-nav-item"><%= isAr ? 'الرسائل' : 'Messages' %></div>
            <div class="mockup-nav-item"><%= isAr ? 'الوصفات' : 'Prescriptions' %></div>
            <div class="mockup-nav-item"><%= isAr ? 'التحليلات' : 'Analytics' %></div>
          </div>
          <div class="mockup-main">
            <div class="mockup-heading"><%= isAr ? 'مرحباً، د. أحمد' : 'Welcome, Dr. Ahmed' %></div>
            <div class="mockup-kpi-row">
              <div class="mockup-kpi">
                <div class="mockup-kpi-value">7</div>
                <div class="mockup-kpi-label"><%= isAr ? 'حالات معلقة' : 'Pending Cases' %></div>
              </div>
              <div class="mockup-kpi">
                <div class="mockup-kpi-value">2</div>
                <div class="mockup-kpi-label"><%= isAr ? 'مواعيد اليوم' : 'Today\'s Appts' %></div>
              </div>
              <div class="mockup-kpi">
                <div class="mockup-kpi-value">94%</div>
                <div class="mockup-kpi-label"><%= isAr ? 'التزام SLA' : 'SLA Rate' %></div>
              </div>
            </div>
            <div class="mockup-table-row">
              <span class="mockup-badge mockup-badge-amber"><%= isAr ? 'عاجل' : 'Urgent' %></span>
              <span style="flex:1">Case #48 — MRI Review</span>
              <span class="mockup-subtext">SLA: 4h</span>
            </div>
            <div class="mockup-table-row">
              <span class="mockup-badge mockup-badge-green"><%= isAr ? 'عادي' : 'Normal' %></span>
              <span style="flex:1">Case #47 — X-Ray</span>
              <span class="mockup-subtext">SLA: 48h</span>
            </div>
          </div>
        </div>
      </div>
      <h2><%= isAr ? 'لوحة تحكم الطبيب' : 'Your Doctor Dashboard' %></h2>
      <p><%= isAr ? 'بعد تسجيل الدخول، سترى لوحة التحكم مع نظرة عامة على حالاتك الحالية والمواعيد القادمة وإحصائيات الأداء. استخدم الشريط الجانبي للتنقل بين الأقسام المختلفة.' : 'After logging in, you\'ll see your dashboard with an overview of your current cases, upcoming appointments, and performance stats. Use the sidebar to navigate between different sections.' %></p>
    </div>

    <!-- Step 2: Case Queue -->
    <div class="guide-step" id="step-2">
      <div class="guide-step-number"><%= isAr ? 'الخطوة ٢ من ١٠' : 'Step 2 of 10' %></div>
      <div class="guide-mockup">
        <div class="mockup-browser-bar">
          <span class="mockup-dot"></span><span class="mockup-dot"></span><span class="mockup-dot"></span>
          <span class="mockup-url">tashkheesa.com/portal/doctor/queue</span>
        </div>
        <div class="mockup-content" style="flex-direction:column;align-items:stretch;padding:20px;">
          <div class="mockup-heading"><%= isAr ? 'قائمة الحالات المعينة' : 'Assigned Case Queue' %></div>
          <div class="mockup-table-row" style="font-weight:600;background:#f8fafc;font-size:8px;text-transform:uppercase;color:#64748b;">
            <span style="width:50px;">#</span>
            <span style="flex:1;"><%= isAr ? 'المريض' : 'Patient' %></span>
            <span style="width:80px;"><%= isAr ? 'الخدمة' : 'Service' %></span>
            <span style="width:60px;">SLA</span>
            <span style="width:60px;"><%= isAr ? 'الحالة' : 'Status' %></span>
          </div>
          <div class="mockup-table-row">
            <span style="width:50px;font-weight:600;">#48</span>
            <span style="flex:1;">Sarah J.</span>
            <span style="width:80px;">MRI</span>
            <span style="width:60px;"><span class="mockup-badge mockup-badge-red">4h left</span></span>
            <span style="width:60px;"><span class="mockup-badge mockup-badge-amber">New</span></span>
          </div>
          <div class="mockup-table-row">
            <span style="width:50px;font-weight:600;">#47</span>
            <span style="flex:1;">Ahmed M.</span>
            <span style="width:80px;">X-Ray</span>
            <span style="width:60px;"><span class="mockup-badge mockup-badge-green">48h</span></span>
            <span style="width:60px;"><span class="mockup-badge mockup-badge-blue">Review</span></span>
          </div>
          <div class="mockup-table-row">
            <span style="width:50px;font-weight:600;">#45</span>
            <span style="flex:1;">Fatma H.</span>
            <span style="width:80px;">CT Scan</span>
            <span style="width:60px;"><span class="mockup-badge mockup-badge-green">72h</span></span>
            <span style="width:60px;"><span class="mockup-badge mockup-badge-amber">New</span></span>
          </div>
        </div>
      </div>
      <h2><%= isAr ? 'قائمة الحالات' : 'Your Case Queue' %></h2>
      <p><%= isAr ? 'الحالات المعينة لك ستظهر في قائمة الحالات. كل حالة تعرض التخصص ومعلومات المريض والموعد النهائي لـ SLA. اضغط على حالة لبدء المراجعة.' : 'Cases assigned to you will appear in your queue. Each case shows the specialty, patient info, and SLA deadline. Click a case to start reviewing.' %></p>
    </div>

    <!-- Step 3: Patient Files -->
    <div class="guide-step" id="step-3">
      <div class="guide-step-number"><%= isAr ? 'الخطوة ٣ من ١٠' : 'Step 3 of 10' %></div>
      <div class="guide-mockup">
        <div class="mockup-browser-bar">
          <span class="mockup-dot"></span><span class="mockup-dot"></span><span class="mockup-dot"></span>
          <span class="mockup-url">tashkheesa.com/portal/doctor/case/48</span>
        </div>
        <div class="mockup-content" style="padding:16px;">
          <div class="mockup-image-viewer" style="width:100%;">
            <div class="mockup-image-thumb">
              <div class="mockup-thumb active"></div>
              <div class="mockup-thumb"></div>
              <div class="mockup-thumb"></div>
            </div>
            <div class="mockup-image-main">
              <div style="text-align:center;">
                <svg width="48" height="48" fill="none" stroke="#475569" stroke-width="1.5"><rect x="6" y="6" width="36" height="36" rx="4"/><circle cx="16" cy="18" r="4"/><path d="M6 34l10-10 8 8 6-6 12 12"/></svg>
                <div style="font-size:10px;color:#94a3b8;margin-top:6px;">MRI_scan_001.dcm</div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <h2><%= isAr ? 'مراجعة ملفات المريض' : 'Reviewing Patient Files' %></h2>
      <p><%= isAr ? 'راجع الصور الطبية والمستندات المرفوعة من المريض. اضغط على أي ملف لعرضه بالحجم الكامل. اقرأ ملاحظات المريض لفهم أعراضه ومخاوفه.' : 'Review the patient\'s uploaded medical images and documents. Click on any file to view it full-screen. Read the patient\'s notes to understand their symptoms and concerns.' %></p>
    </div>

    <!-- Step 4: Annotation Tools -->
    <div class="guide-step" id="step-4">
      <div class="guide-step-number"><%= isAr ? 'الخطوة ٤ من ١٠' : 'Step 4 of 10' %></div>
      <div class="guide-mockup">
        <div class="mockup-browser-bar">
          <span class="mockup-dot"></span><span class="mockup-dot"></span><span class="mockup-dot"></span>
          <span class="mockup-url">tashkheesa.com/portal/doctor/case/48/annotate</span>
        </div>
        <div class="mockup-content" style="flex-direction:column;padding:16px;gap:10px;">
          <div class="mockup-annotation-bar">
            <div class="mockup-tool active" title="Arrow">
              <svg width="14" height="14" fill="none" stroke="#059669" stroke-width="2"><line x1="3" y1="11" x2="11" y2="3"/><polyline points="6 3 11 3 11 8"/></svg>
            </div>
            <div class="mockup-tool" title="Circle">
              <svg width="14" height="14" fill="none" stroke="#64748b" stroke-width="2"><circle cx="7" cy="7" r="5"/></svg>
            </div>
            <div class="mockup-tool" title="Rectangle">
              <svg width="14" height="14" fill="none" stroke="#64748b" stroke-width="2"><rect x="2" y="2" width="10" height="10" rx="1"/></svg>
            </div>
            <div class="mockup-tool" title="Text">
