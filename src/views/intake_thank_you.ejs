<%- include('partials/header', { title: ((typeof lang !== 'undefined' && lang === 'ar') ? "تم استلام الطلب" : "Submission Received"), layout: "portal", showNav: false }) %>
<% const brandSafe = (typeof brand !== 'undefined' && brand) ? brand : 'Tashkheesa'; %>
<% const isAr = (typeof lang !== 'undefined' && lang === 'ar') || (typeof dir !== 'undefined' && dir === 'rtl'); %>
  <div class="portal-shell">
    <div class="portal-header">
      <div class="portal-logo">
        <%= brandSafe %>
        <span><%= isAr ? 'بوابة المريض' : 'Patient Portal' %></span>
      </div>
    </div>

    <div class="portal-grid">
      <aside class="portal-sidebar">
        <ul class="portal-nav">
          <li><a href="/dashboard"><%= isAr ? 'حالاتي الطبية' : 'My cases' %></a></li>
          <li><a href="/portal/patient/orders/new"><%= isAr ? 'حالة جديدة' : 'New case' %></a></li>
          <li><a href="/portal/patient/alerts"><%= isAr ? 'التنبيهات' : 'Alerts' %></a></li>
          <li><a href="/patient/profile"><%= isAr ? 'الملف الشخصي' : 'Profile' %></a></li>
          <li><a href="/logout"><%= isAr ? 'تسجيل الخروج' : 'Logout' %></a></li>
        </ul>
      </aside>

      <main class="portal-content">
        <div class="portal-hero">
          <h1 class="portal-hero-title"><%= isAr ? 'شكراً لك' : 'Thank you' %></h1>
          <p class="portal-hero-subtitle"><%= isAr ? 'تم إرسال طلبك بنجاح.' : 'Your request has been submitted.' %></p>
        </div>

        <div class="flow-card" style="max-width:640px;">
          <p><%= isAr ? 'استلمنا حالتك وسيتم مراجعتها قريباً. ستصلك إشعارات عند مشاركة التقرير من الطبيب.' : 'We’ve received your case and will review it shortly. You’ll get notified when your doctor shares the report.' %></p>
          <ul style="margin-top:12px;">
            <li><%= isAr ? 'مدة الاستجابة: الحالات السريعة تستهدف ٢٤ ساعة، والحالات العادية تستهدف ٧٢ ساعة.' : 'Response time: fast track cases aim for 24 hours; standard cases target 72 hours.' %></li>
            <li><%= isAr ? 'إذا قمت بإرسال ملفات، سيقوم فريقنا بإرفاقها بحالتك.' : 'If you provided files, our team will attach them to your case.' %></li>
            <li><%= isAr ? 'يمكنك تسجيل الدخول لمتابعة الحالة في أي وقت.' : 'You can log in to track progress anytime.' %></li>
            <% if (showTemp) { %>
              <li>
                <%= isAr ? 'استخدم بريدك الإلكتروني' : 'Use your email' %><% if (email) { %> (<strong><%= email %></strong>)<% } %> <%= isAr ? 'وكلمة المرور المؤقتة' : 'and temporary password' %>
                <strong><%= tempPassword %></strong> <%= isAr ? 'لتسجيل الدخول وتغييرها لاحقاً.' : 'to sign in and change it later.' %>
              </li>
            <% } %>
          </ul>

          <div class="section-cta">
            <a class="btn btn-primary" href="/login"><%= isAr ? 'الانتقال إلى تسجيل الدخول' : 'Go to login' %></a>
            <a class="btn btn-secondary" href="/"><%= isAr ? 'العودة للرئيسية' : 'Return home' %></a>
          </div>
        </div>
      </main>
    </div>
  </div>

<%- include('partials/footer', { showFooter: false }) %>
