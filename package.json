{
  "name": "tashkheesa-portal",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "doctor": "node scripts/doctor.js",
    "smoke": "node scripts/smoke.js",
    "backup:db": "node scripts/backup-db.js",
    "db:integrity": "node scripts/db-integrity.js",
    "preflight": "node scripts/preflight.js",
    "verify": "npm run deps:check && node scripts/verify.js",
    "deps:check": "node -e \"const fs=require('fs'); if(!fs.existsSync('node_modules')){ console.error('⛔ node_modules missing. Run: npm i'); process.exit(1);} console.log('✅ deps ok');\""
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.5.0",
    "cookie-parser": "^1.4.7",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.1",
    "node-cron": "^4.2.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.0.2"
  }
}
